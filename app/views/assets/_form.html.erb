<%= form_with(model: asset, class: "contents") do |form| %>
  <% if asset.errors.any? %>
    <div class="bg-red-50 text-red-500 px-4 py-3 rounded-md mb-4">
      <h2 class="font-medium"><%= pluralize(asset.errors.count, "error") %> prohibited this asset from being saved:</h2>
      <ul class="list-disc ml-6 mt-2">
        <% asset.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-4">
    <%= form.label :asset_group_id, "Group", class: "block text-sm font-medium text-gray-700" %>
    <%= form.collection_select :asset_group_id, AssetGroup.order(:name), :id, :name, { prompt: "Select group" }, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 border px-3 py-2" %>
  </div>

  <div class="mb-4">
    <%= form.label :name, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 border px-3 py-2", placeholder: "My House" %>
  </div>

  <div class="mb-4">
    <%= form.label :asset_type_id, "Type", class: "block text-sm font-medium text-gray-700" %>
    <%= form.collection_select :asset_type_id, AssetType.order(:is_liability, :name), :id, :name, { prompt: "Select type" }, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 border px-3 py-2" %>
  </div>

  <div class="mb-4">
    <%= form.label :value, class: "block text-sm font-medium text-gray-700" %>
    <%= form.number_field :value, step: 0.01, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 border px-3 py-2", placeholder: "0.00" %>
  </div>

  <div class="mb-4">
    <%= form.label :currency, class: "block text-sm font-medium text-gray-700" %>
    <% if asset.persisted? %>
      <%= form.select :currency, Currency.order(:code).pluck(:code), { selected: asset.currency }, { class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm bg-gray-100 border px-3 py-2 cursor-not-allowed", disabled: true } %>
      <%= form.hidden_field :currency %>
      <p class="mt-1 text-xs text-gray-500">Currency cannot be changed after creation.</p>
    <% else %>
      <%= form.select :currency, Currency.order(:code).pluck(:code), { selected: asset.currency || Currency.default&.code }, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 border px-3 py-2" %>
    <% end %>
  </div>

  <div class="mb-4">
    <%= form.label :notes, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_area :notes, rows: 3, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 border px-3 py-2", placeholder: "Optional notes" %>
  </div>

  <div class="flex space-x-4">
    <%= form.submit class: "rounded-md px-4 py-2 bg-blue-600 hover:bg-blue-500 text-white font-medium cursor-pointer" %>
    <%= link_to "Cancel", assets_path, class: "rounded-md px-4 py-2 bg-gray-100 hover:bg-gray-50 font-medium" %>
  </div>
<% end %>
