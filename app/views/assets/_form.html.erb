<%= form_with(model: asset, class: "contents") do |form| %>
  <% if asset.errors.any? %>
    <div class="<%= ui_alert_error_class %> mb-4">
      <h2 class="font-medium"><%= pluralize(asset.errors.count, "error") %> prohibited this asset from being saved:</h2>
      <ul class="list-disc ml-6 mt-2">
        <% asset.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-4">
    <%= form.label :asset_group_id, "Group", class: ui_label_class %>
    <%= form.collection_select :asset_group_id, AssetGroup.order(:name), :id, :name, { prompt: "Select group" }, class: ui_input_class %>
  </div>

  <div class="mb-4">
    <%= form.label :name, class: ui_label_class %>
    <%= form.text_field :name, class: ui_input_class, placeholder: "My House" %>
  </div>

  <div class="mb-4">
    <%= form.label :asset_type_id, "Type", class: ui_label_class %>
    <%= form.collection_select :asset_type_id, AssetType.order(:is_liability, :name), :id, :name, { prompt: "Select type" }, class: ui_input_class %>
  </div>

  <div class="mb-4">
    <%= form.label :value, class: ui_label_class %>
    <%= form.number_field :value, step: 0.01, class: ui_input_class, placeholder: "0.00" %>
  </div>

  <div class="mb-4">
    <%= form.label :currency, class: ui_label_class %>
    <% if asset.persisted? %>
      <%= form.select :currency, Currency.order(:code).pluck(:code), { selected: asset.currency }, { class: "#{ui_input_class} bg-slate-100 dark:bg-slate-600 cursor-not-allowed opacity-75", disabled: true } %>
      <%= form.hidden_field :currency %>
      <p class="mt-1 text-xs <%= ui_text_subtle_class %>">Currency cannot be changed after creation.</p>
    <% else %>
      <%= form.select :currency, Currency.order(:code).pluck(:code), { selected: asset.currency || Currency.default&.code }, class: ui_input_class %>
    <% end %>
  </div>

  <div class="mb-4">
    <%= form.label :notes, class: ui_label_class %>
    <%= form.text_area :notes, rows: 3, class: ui_input_class, placeholder: "Optional notes" %>
  </div>

  <div class="flex space-x-4">
    <%= form.submit class: "#{ui_btn_primary_class} cursor-pointer" %>
    <%= link_to "Cancel", assets_path, class: ui_btn_secondary_class %>
  </div>
<% end %>
