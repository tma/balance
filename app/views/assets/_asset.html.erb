<div id="<%= dom_id asset %>" class="w-full sm:w-auto my-5 space-y-5">
  <div>
    <strong class="block font-medium mb-1 <%= ui_text_class %>">Name:</strong>
    <span class="<%= ui_text_muted_class %>"><%= asset.name %></span>
  </div>
  <div>
    <strong class="block font-medium mb-1 <%= ui_text_class %>">Asset type:</strong>
    <span class="<%= ui_text_muted_class %>"><%= asset.asset_type_id %></span>
  </div>
  <div>
    <strong class="block font-medium mb-1 <%= ui_text_class %>">Value:</strong>
    <span class="<%= ui_text_muted_class %>"><%= format_amount(asset.value) %></span>
  </div>
  <div>
    <strong class="block font-medium mb-1 <%= ui_text_class %>">Currency:</strong>
    <span class="<%= ui_text_muted_class %>"><%= asset.currency %></span>
  </div>
  <div>
    <strong class="block font-medium mb-1 <%= ui_text_class %>">Notes:</strong>
    <span class="<%= ui_text_muted_class %>"><%= asset.notes %></span>
  </div>
</div>
