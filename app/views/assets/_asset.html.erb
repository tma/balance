<div id="<%= dom_id asset %>" class="w-full sm:w-auto my-5 space-y-5">
  <div>
    <strong class="block font-medium mb-1">Name:</strong>
    <%= asset.name %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Asset type:</strong>
    <%= asset.asset_type_id %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Value:</strong>
    <%= format_amount(asset.value) %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Currency:</strong>
    <%= asset.currency %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Notes:</strong>
    <%= asset.notes %>
  </div>
</div>
