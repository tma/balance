<% content_for :title, @asset.name %>

<div class="w-full max-w-2xl">
  <div class="flex justify-between items-center mb-6">
    <div>
      <h1 class="text-2xl font-bold text-gray-900"><%= @asset.name %></h1>
      <p class="text-gray-500">
        <%= @asset.asset_type.name.capitalize %> Â· <%= @asset.currency %>
        <% if @asset.asset_type.is_liability? %>
          <span class="ml-2 px-2 py-0.5 text-xs rounded-full bg-red-100 text-red-800">Liability</span>
        <% else %>
          <span class="ml-2 px-2 py-0.5 text-xs rounded-full bg-green-100 text-green-800">Asset</span>
        <% end %>
      </p>
    </div>
    <div class="flex space-x-2">
      <%= link_to "Edit", edit_asset_path(@asset), class: "rounded-md px-4 py-2 bg-blue-600 hover:bg-blue-500 text-white font-medium" %>
      <%= link_to "Back", assets_path, class: "rounded-md px-4 py-2 bg-gray-100 hover:bg-gray-50 font-medium" %>
    </div>
  </div>

  <div class="bg-white rounded-lg shadow p-6 mb-6">
    <p class="text-sm text-gray-500">Current Value</p>
    <p class="text-4xl font-bold <%= @asset.asset_type.is_liability? ? 'text-red-600' : 'text-green-600' %>">
      <%= number_to_currency(@asset.value, unit: @asset.currency + " ") %>
    </p>
    <% if @asset.notes.present? %>
      <p class="mt-4 text-sm text-gray-600"><%= @asset.notes %></p>
    <% end %>
  </div>

  <div class="bg-white rounded-lg shadow">
    <div class="px-6 py-4 border-b">
      <h2 class="text-lg font-semibold">Value History</h2>
    </div>
    <% if @valuations.any? %>
      <div class="divide-y">
        <% @valuations.each do |valuation| %>
          <div class="px-6 py-4 flex justify-between">
            <span class="text-gray-500"><%= valuation.date.strftime("%b %d, %Y") %></span>
            <span class="font-medium"><%= number_to_currency(valuation.value, unit: @asset.currency + " ") %></span>
          </div>
        <% end %>
      </div>
    <% else %>
      <p class="px-6 py-8 text-center text-gray-500">No valuation history yet.</p>
    <% end %>
  </div>
</div>
