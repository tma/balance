<% content_for :title, @asset.name %>

<div class="w-full">
  <div class="flex justify-between items-center mb-6">
    <div>
      <h1 class="text-2xl font-bold text-slate-800"><%= @asset.name %></h1>
      <p class="text-slate-500">
        <%= @asset.asset_group.name %> ·
        <%= @asset.asset_type.name.capitalize %> · <%= @asset.currency %>
        <% if @asset.asset_type.is_liability? %>
          <span class="ml-2 px-2 py-0.5 text-xs rounded-full bg-rose-100 text-rose-600">Liability</span>
        <% end %>
      </p>
    </div>
    <div class="flex space-x-2">
      <%= link_to "Edit", edit_asset_path(@asset), class: "rounded-lg px-4 py-2 bg-cyan-500 hover:bg-cyan-600 text-white font-medium transition" %>
      <%= link_to "Back", assets_path, class: "rounded-lg px-4 py-2 bg-slate-100 hover:bg-slate-200 text-slate-700 font-medium transition" %>
    </div>
  </div>

  <div class="bg-white rounded-xl border border-slate-200 p-4 mb-4">
    <p class="text-sm text-slate-500">Current Value</p>
    <p class="text-2xl font-bold text-slate-800">
      <%= @asset.asset_type.is_liability? ? "-" : "" %><%= format_currency(@asset.value) %>
    </p>
    <% if @asset.notes.present? %>
      <p class="mt-2 text-sm text-slate-600"><%= @asset.notes %></p>
    <% end %>
  </div>

  <div class="bg-white rounded-xl border border-slate-200 overflow-hidden">
    <% if @valuations.any? %>
      <table class="min-w-full">
        <thead class="bg-slate-50 border-b border-slate-200">
          <tr>
            <th class="px-4 py-2 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">Date</th>
            <th class="px-4 py-2 text-right text-xs font-medium text-slate-500 uppercase tracking-wider">Value</th>
            <th class="px-4 py-2 text-right text-xs font-medium text-slate-500 uppercase tracking-wider w-24"></th>
          </tr>
        </thead>
        <tbody class="bg-white">
          <% @valuations.each do |valuation| %>
            <tr class="hover:bg-slate-50 transition border-b border-slate-100 last:border-b-0">
              <td class="px-4 py-2 text-sm text-slate-700">
                <%= valuation.date.strftime("%b %d, %Y") %>
              </td>
              <td class="px-4 py-2 whitespace-nowrap text-sm text-right text-slate-700">
                <%= @asset.asset_type.is_liability? ? "-" : "" %><%= format_currency(valuation.value) %>
              </td>
              <td class="px-4 py-2 whitespace-nowrap text-right text-sm">
                <%= button_to "Delete", asset_valuation_path(@asset, valuation), method: :delete, class: "text-rose-500 hover:text-rose-600", form: { data: { turbo_confirm: "Are you sure?" }, class: "inline" } %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <div class="p-8 text-center">
        <p class="text-slate-500">No valuation history yet.</p>
      </div>
    <% end %>
  </div>
</div>
