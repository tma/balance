<% content_for :title, "Assets & Liabilities" %>

<div class="w-full">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold text-slate-800">Assets & Liabilities</h1>
    <div class="flex space-x-2">
      <%= link_to "New Group", new_asset_group_path, class: "rounded-lg px-4 py-2 bg-slate-100 hover:bg-slate-200 text-slate-700 font-medium transition" %>
      <%= link_to "New Asset", new_asset_path, class: "rounded-lg px-4 py-2 bg-cyan-500 hover:bg-cyan-600 text-white font-medium transition" %>
    </div>
  </div>

  <% if @asset_groups.any? %>
    <div class="bg-white rounded-xl border border-slate-200 overflow-hidden">
      <table class="min-w-full" data-controller="sortable" data-sortable-url-value="<%= sort_asset_groups_path %>" data-sortable-type-value="group">
        <thead class="bg-slate-50 border-b border-slate-200">
          <tr>
            <th class="px-4 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider w-8"></th>
            <th class="px-4 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">Name</th>
            <th class="px-4 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">Type</th>
            <th class="px-4 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">Currency</th>
            <th class="px-4 py-3 text-right text-xs font-medium text-slate-500 uppercase tracking-wider">Value</th>
            <th class="px-4 py-3 text-right text-xs font-medium text-slate-500 uppercase tracking-wider w-24"></th>
          </tr>
        </thead>
        <% @asset_groups.each do |group| %>
          <tbody data-sortable-target="item" data-id="<%= group.id %>" class="group-container">
            <tr class="bg-slate-50 border-t border-b border-slate-200 cursor-move group-header">
              <td class="px-4 py-1.5 text-slate-400 text-xs leading-none">⋮⋮</td>
              <td colspan="3" class="px-4 py-1.5 text-xs font-medium text-slate-500">
                <%= group.name %>
                <span class="text-slate-400 ml-2"><%= group.assets.size %> item<%= group.assets.size == 1 ? '' : 's' %></span>
              </td>
              <td class="px-4 py-1.5 text-right">
                <% net_value = group.net_value_in_default_currency %>
                <span class="text-xs font-bold text-slate-700">
                  <%= format_currency(net_value) %>
                </span>
              </td>
              <td class="px-4 py-1.5 text-right">
                <%= link_to "Edit", edit_asset_group_path(group), class: "text-xs text-cyan-600 hover:text-cyan-700" %>
              </td>
            </tr>
          </tbody>
          <tbody data-controller="sortable" data-sortable-url-value="<%= sort_assets_path %>">
            <% group.assets.includes(:asset_type).each do |asset| %>
              <tr class="hover:bg-slate-50 transition border-b border-slate-100 last:border-b-0 cursor-move" data-sortable-target="item" data-id="<%= asset.id %>">
                <td class="px-4 py-2 text-slate-300 pl-8 text-xs leading-none">⋮⋮</td>
                <td class="px-4 py-2 text-sm text-slate-700 font-medium">
                  <%= link_to asset.name, asset, class: "hover:text-cyan-600" %>
                </td>
                <td class="px-4 py-2 whitespace-nowrap text-sm text-slate-500">
                  <%= asset.asset_type.name.capitalize %>
                  <% if asset.asset_type.is_liability? %>
                    <span class="ml-1 px-1.5 py-0.5 text-xs rounded bg-rose-100 text-rose-600">Liability</span>
                  <% end %>
                </td>
                <td class="px-4 py-2 whitespace-nowrap text-sm text-slate-500">
                  <%= asset.currency %>
                </td>
                <td class="px-4 py-2 whitespace-nowrap text-sm text-right text-slate-700">
                  <%= asset.asset_type.is_liability? ? "-" : "" %><%= format_currency(asset.value) %>
                </td>
                <td class="px-4 py-2 whitespace-nowrap text-right text-sm space-x-2">
                  <%= link_to "Edit", edit_asset_path(asset), class: "text-cyan-600 hover:text-cyan-700" %>
                  <%= button_to "Delete", asset, method: :delete, class: "text-rose-500 hover:text-rose-600", form: { data: { turbo_confirm: "Are you sure? This will delete all valuation history." }, class: "inline" } %>
                </td>
              </tr>
            <% end %>
          </tbody>
        <% end %>
      </table>
    </div>
  <% else %>
    <div class="bg-white rounded-xl border border-slate-200 p-6 text-center">
      <p class="text-slate-500 mb-4">No asset groups yet.</p>
      <p class="text-sm text-slate-400 mb-4">Create a group first, then add assets to it.</p>
      <%= link_to "Create a group", new_asset_group_path, class: "text-cyan-600 hover:underline" %>
    </div>
  <% end %>
</div>
