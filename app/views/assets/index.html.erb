<% content_for :title, "Assets & Liabilities" %>

<div class="w-full">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold text-gray-900">Assets & Liabilities</h1>
    <%= link_to "New Asset", new_asset_path, class: "rounded-md px-4 py-2 bg-blue-600 hover:bg-blue-500 text-white font-medium" %>
  </div>

  <% if @assets.any? %>
    <div class="mb-8">
      <h2 class="text-lg font-semibold text-gray-900 mb-4">Assets</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        <% @assets.each do |asset| %>
          <div class="bg-white rounded-lg shadow p-6">
            <div class="flex justify-between items-start mb-4">
              <div>
                <h3 class="text-lg font-semibold text-gray-900"><%= asset.name %></h3>
                <p class="text-sm text-gray-500"><%= asset.asset_type.name.capitalize %></p>
              </div>
              <span class="text-xs font-medium px-2 py-1 bg-green-100 text-green-800 rounded"><%= asset.currency %></span>
            </div>
            <p class="text-2xl font-bold text-green-600 mb-4">
              <%= number_to_currency(asset.value, unit: "") %>
            </p>
            <div class="flex space-x-2 text-sm">
              <%= link_to "View", asset, class: "text-blue-600 hover:underline" %>
              <%= link_to "Edit", edit_asset_path(asset), class: "text-blue-600 hover:underline" %>
              <%= button_to "Delete", asset, method: :delete, class: "text-red-600 hover:underline", data: { turbo_confirm: "Are you sure?" } %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <% if @liabilities.any? %>
    <div>
      <h2 class="text-lg font-semibold text-gray-900 mb-4">Liabilities</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        <% @liabilities.each do |liability| %>
          <div class="bg-white rounded-lg shadow p-6">
            <div class="flex justify-between items-start mb-4">
              <div>
                <h3 class="text-lg font-semibold text-gray-900"><%= liability.name %></h3>
                <p class="text-sm text-gray-500"><%= liability.asset_type.name.capitalize %></p>
              </div>
              <span class="text-xs font-medium px-2 py-1 bg-red-100 text-red-800 rounded"><%= liability.currency %></span>
            </div>
            <p class="text-2xl font-bold text-red-600 mb-4">
              <%= number_to_currency(liability.value, unit: "") %>
            </p>
            <div class="flex space-x-2 text-sm">
              <%= link_to "View", liability, class: "text-blue-600 hover:underline" %>
              <%= link_to "Edit", edit_asset_path(liability), class: "text-blue-600 hover:underline" %>
              <%= button_to "Delete", liability, method: :delete, class: "text-red-600 hover:underline", data: { turbo_confirm: "Are you sure?" } %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <% if @assets.empty? && @liabilities.empty? %>
    <div class="bg-white rounded-lg shadow p-6 text-center">
      <p class="text-gray-500 mb-4">No assets or liabilities yet.</p>
      <%= link_to "Add your first asset", new_asset_path, class: "text-blue-600 hover:underline" %>
    </div>
  <% end %>
</div>
