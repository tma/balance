<% content_for :title, "Assets & Liabilities" %>

<div class="w-full">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold text-slate-800">Assets & Liabilities</h1>
    <div class="flex space-x-2">
      <%= link_to "New Group", new_asset_group_path, class: "rounded-lg px-4 py-2 bg-slate-100 hover:bg-slate-200 text-slate-700 font-medium transition" %>
      <%= link_to "New Asset", new_asset_path, class: "rounded-lg px-4 py-2 bg-cyan-500 hover:bg-cyan-600 text-white font-medium transition" %>
    </div>
  </div>

  <% if @asset_groups.any? %>
    <div class="space-y-4">
      <% @asset_groups.each do |group| %>
        <div class="bg-white rounded-xl border border-slate-200 overflow-hidden">
          <div class="p-6">
            <div class="flex justify-between items-start mb-4">
              <div>
                <h2 class="text-xl font-semibold text-slate-800">
                  <%= link_to group.name, asset_group_path(group), class: "hover:text-cyan-600 transition" %>
                </h2>
                <% if group.description.present? %>
                  <p class="text-sm text-slate-500 mt-1"><%= group.description %></p>
                <% end %>
              </div>
              <div class="flex space-x-3 text-sm">
                <%= link_to "View", asset_group_path(group), class: "text-cyan-600 hover:text-cyan-700 hover:underline" %>
                <%= link_to "Edit", edit_asset_group_path(group), class: "text-cyan-600 hover:text-cyan-700 hover:underline" %>
              </div>
            </div>

            <% net_values = group.net_value_by_currency %>
            <% if net_values.any? %>
              <div class="flex flex-wrap gap-4">
                <% net_values.each do |currency, value| %>
                  <div class="flex items-baseline space-x-2">
                    <span class="text-2xl font-bold <%= value >= 0 ? 'text-emerald-500' : 'text-rose-400' %>">
                      <%= number_to_currency(value.abs, unit: "") %>
                    </span>
                    <span class="text-xs font-medium px-2 py-1 rounded-lg <%= value >= 0 ? 'bg-emerald-50 text-emerald-600' : 'bg-rose-50 text-rose-500' %>">
                      <%= currency %>
                    </span>
                  </div>
                <% end %>
              </div>
            <% else %>
              <p class="text-slate-400 text-sm">No assets in this group</p>
            <% end %>

            <p class="text-sm text-slate-400 mt-2"><%= pluralize(group.assets.count, "item") %></p>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="bg-white rounded-xl border border-slate-200 p-6 text-center">
      <p class="text-slate-500 mb-4">No asset groups yet.</p>
      <p class="text-sm text-slate-400 mb-4">Create a group first, then add assets to it.</p>
      <%= link_to "Create your first group", new_asset_group_path, class: "text-cyan-600 hover:underline" %>
    </div>
  <% end %>
</div>
