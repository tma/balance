<% content_for :title, "Currency - Admin" %>

<div class="max-w-md">
  <h1 class="text-2xl font-bold text-slate-800 mb-6">Currency: <%= @currency.code %></h1>

  <div class="bg-white rounded-xl border border-slate-200 p-6 mb-6">
    <p class="text-slate-700"><strong>Code:</strong> <%= @currency.code %></p>
  </div>

  <div class="flex space-x-4">
    <%= link_to "Edit", edit_admin_currency_path(@currency), class: "rounded-lg px-4 py-2 bg-cyan-500 hover:bg-cyan-500 text-white font-medium" %>
    <%= link_to "Back", admin_currencies_path, class: "rounded-lg px-4 py-2 bg-slate-100 hover:bg-slate-50 font-medium" %>
    <%= button_to "Delete", admin_currency_path(@currency), method: :delete, class: "rounded-lg px-4 py-2 bg-red-600 hover:bg-rose-500 text-white font-medium cursor-pointer", data: { turbo_confirm: "Are you sure?" } %>
  </div>
</div>
