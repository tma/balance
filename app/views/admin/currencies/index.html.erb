<% content_for :title, "Currencies - Admin" %>

<div class="w-full">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold text-slate-800">Currencies</h1>
    <%= link_to "New Currency", new_admin_currency_path, class: "rounded-lg px-4 py-2 bg-cyan-500 hover:bg-cyan-600 text-white font-medium transition" %>
  </div>

  <div class="bg-white rounded-xl border border-slate-200 overflow-hidden">
    <% if @currencies.any? %>
      <table class="min-w-full">
        <thead class="bg-slate-50 border-b border-slate-200">
          <tr>
            <th class="px-4 py-2 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">Code</th>
            <th class="px-4 py-2 text-right text-xs font-medium text-slate-500 uppercase tracking-wider w-24"></th>
          </tr>
        </thead>
        <tbody class="bg-white">
          <% @currencies.each do |currency| %>
            <tr class="hover:bg-slate-50 transition border-b border-slate-100 last:border-b-0">
              <td class="px-4 py-2 whitespace-nowrap text-sm font-medium text-slate-700">
                <%= currency.code %>
                <% if currency.default? %>
                  <span class="ml-2 px-1.5 py-0.5 rounded text-xs bg-emerald-50 text-emerald-600">Default</span>
                <% end %>
              </td>
              <td class="px-4 py-2 whitespace-nowrap text-right text-sm space-x-2">
                <%= link_to "Edit", edit_admin_currency_path(currency), class: "text-cyan-600 hover:text-cyan-700" %>
                <%= button_to "Delete", admin_currency_path(currency), method: :delete, class: "text-rose-500 hover:text-rose-600", form: { data: { turbo_confirm: "Are you sure?" }, class: "inline" } %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <p class="text-center py-8 text-slate-500">No currencies found.</p>
    <% end %>
  </div>
</div>
