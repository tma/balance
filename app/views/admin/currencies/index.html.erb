<% content_for :title, "Currencies - Admin" %>

<div class="w-full">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold text-slate-800">Currencies</h1>
    <%= link_to "New Currency", new_admin_currency_path, class: "rounded-lg px-4 py-2 bg-cyan-500 hover:bg-cyan-500 text-white font-medium" %>
  </div>

  <div class="bg-white rounded-xl border border-slate-200 overflow-hidden">
    <% if @currencies.any? %>
      <table class="min-w-full divide-y divide-slate-200">
        <thead class="bg-slate-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">Code</th>
            <th class="px-6 py-3 text-right text-xs font-medium text-slate-500 uppercase tracking-wider">Actions</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-slate-200">
          <% @currencies.each do |currency| %>
            <tr>
              <td class="px-6 py-4 whitespace-nowrap font-medium">
                <%= currency.code %>
                <% if currency.default? %>
                  <span class="ml-2 inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-emerald-50 text-emerald-600">Default</span>
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-right text-sm space-x-2">
                <%= link_to "Edit", edit_admin_currency_path(currency), class: "text-cyan-600 hover:underline" %>
                <%= button_to "Delete", admin_currency_path(currency), method: :delete, class: "text-rose-500 hover:underline", data: { turbo_confirm: "Are you sure?" } %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <p class="text-center py-10 text-slate-500">No currencies found.</p>
    <% end %>
  </div>
</div>
