<% content_for :title, "Edit Currency - Admin" %>

<% content_for :breadcrumbs do %>
  <%= ui_breadcrumbs do %>
    <%= ui_breadcrumb_first "Settings" %>
    <%= ui_breadcrumb_item "Currencies", admin_currencies_path %>
    <%= ui_breadcrumb_item @currency.code, admin_currency_path(@currency) %>
  <% end %>
<% end %>

<div>
  <div class="flex items-center h-10 mb-6">
    <h1 class="<%= ui_title_class %>">Edit Currency</h1>
  </div>
  <%= render "form", currency: @currency %>
</div>
