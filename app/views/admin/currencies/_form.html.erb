<%= form_with(model: [:admin, currency], class: "contents") do |form| %>
  <% if currency.errors.any? %>
    <div class="<%= ui_alert_error_class %> mb-4">
      <h2 class="font-medium"><%= pluralize(currency.errors.count, "error") %> prohibited this currency from being saved:</h2>
      <ul class="list-disc ml-6 mt-2">
        <% currency.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-4">
    <%= form.label :code, class: ui_label_class %>
    <%= form.text_field :code, class: ui_input_class, placeholder: "USD", maxlength: 3 %>
    <p class="mt-1 text-sm <%= ui_text_muted_class %>">3-letter ISO 4217 code (e.g., USD, EUR, GBP)</p>
  </div>

  <div class="mb-4">
    <label class="flex items-center">
      <%= form.check_box :default, class: ui_checkbox_class %>
      <span class="ml-2 <%= ui_label_class %>">Set as default currency</span>
    </label>
    <p class="mt-1 text-sm <%= ui_text_muted_class %>">The default currency will be pre-selected when creating new accounts</p>
  </div>

  <div class="flex space-x-4">
    <%= form.submit class: ui_btn_primary_class + " cursor-pointer" %>
    <%= link_to "Cancel", admin_currencies_path, class: ui_btn_secondary_class %>
  </div>
<% end %>
