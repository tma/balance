<%= form_with(model: [:admin, connection], url: connection.persisted? ? admin_broker_connection_path(connection) : admin_broker_connections_path, class: "contents", data: { controller: "test-connection", test_connection_url_value: test_connection_admin_broker_connections_path }) do |form| %>
  <% if connection.errors.any? %>
    <div class="<%= ui_alert_error_class %> mb-4">
      <h2 class="font-medium"><%= pluralize(connection.errors.count, "error") %> prohibited this connection from being saved:</h2>
      <ul class="list-disc ml-6 mt-2">
        <% connection.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div id="test-result" data-test-connection-target="result" class="hidden mb-4"></div>

  <%= form.hidden_field :broker_type, data: { test_connection_target: "brokerType" } %>

  <div class="mb-4">
    <%= form.label :name, class: ui_label_class %>
    <%= form.text_field :name, class: ui_input_class, placeholder: "Main Brokerage", data: { test_connection_target: "name" } %>
  </div>

  <div class="mb-4">
    <%= form.label :account_id, "Account ID", class: ui_label_class %>
    <%= form.text_field :account_id, class: ui_input_class, placeholder: "U1234567", data: { test_connection_target: "accountId" } %>
  </div>

  <% if connection.ibkr? %>
    <div class="mb-4">
      <%= form.label :flex_token, "Flex Token", class: ui_label_class %>
      <%= form.text_field :flex_token, class: ui_input_class, placeholder: "Your Flex Web Service token", data: { test_connection_target: "flexToken" } %>
    </div>

    <div class="mb-4">
      <%= form.label :flex_query_id, "Flex Query ID", class: ui_label_class %>
      <%= form.text_field :flex_query_id, class: ui_input_class, placeholder: "123456", data: { test_connection_target: "flexQueryId" } %>
    </div>
  <% end %>

  <div class="flex space-x-4">
    <%= form.submit connection.persisted? ? "Update Connection" : "Create Connection", class: ui_btn_primary_class + " cursor-pointer" %>
    <button type="button" data-action="click->test-connection#test" data-test-connection-target="testButton" class="<%= ui_btn_secondary_class %>">
      Test Connection
    </button>
    <%= link_to "Cancel", admin_broker_connections_path, class: ui_btn_secondary_class %>
  </div>
<% end %>
