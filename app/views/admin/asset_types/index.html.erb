<% content_for :title, "Asset Types - Admin" %>

<% content_for :breadcrumbs do %>
  <%= ui_breadcrumbs do %>
    <%= ui_breadcrumb_first "Settings" %>
  <% end %>
<% end %>

<div class="w-full">
  <div class="flex justify-between items-center h-10 mb-6">
    <h1 class="<%= ui_title_class %>">Asset Types</h1>
    <%= link_to "New", new_admin_asset_type_path, class: ui_btn_primary_class %>
  </div>

  <div class="<%= ui_card_class %> overflow-hidden">
    <% if @asset_types.any? %>
      <table class="min-w-full">
        <thead class="<%= ui_table_header_class %>">
          <tr>
            <th class="<%= ui_table_th_class %> text-left">Name</th>
            <th class="<%= ui_table_th_class %> text-left">Type</th>
            <th class="<%= ui_table_th_class %> text-right w-24"></th>
          </tr>
        </thead>
        <tbody>
          <% @asset_types.each do |asset_type| %>
            <tr class="<%= ui_table_row_class %>">
              <td class="<%= ui_table_td_class %> font-medium <%= ui_text_class %>"><%= asset_type.name %></td>
              <td class="<%= ui_table_td_class %>">
                <% if asset_type.is_liability? %>
                  <span class="<%= ui_badge_danger_class %>">Liability</span>
                <% else %>
                  <span class="<%= ui_badge_success_class %>">Asset</span>
                <% end %>
              </td>
              <td class="<%= ui_table_td_class %> text-right whitespace-nowrap">
                <div class="flex items-center justify-end gap-2">
                  <%= link_to "Edit", edit_admin_asset_type_path(asset_type), class: ui_link_class %>
                  <%= button_to "Delete", admin_asset_type_path(asset_type), method: :delete, class: "text-rose-500 hover:text-rose-600 dark:text-rose-400 dark:hover:text-rose-300", form: { data: { turbo_confirm: "Are you sure?" } } %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <p class="<%= ui_empty_class %>">No asset types found.</p>
    <% end %>
  </div>
</div>
