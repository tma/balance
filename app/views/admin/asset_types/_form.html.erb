<%= form_with(model: [:admin, asset_type], class: "contents") do |form| %>
  <% if asset_type.errors.any? %>
    <div class="bg-rose-50 text-rose-500 px-4 py-3 rounded-lg mb-4">
      <h2 class="font-medium"><%= pluralize(asset_type.errors.count, "error") %> prohibited this asset type from being saved:</h2>
      <ul class="list-disc ml-6 mt-2">
        <% asset_type.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-4">
    <%= form.label :name, class: "block text-sm font-medium text-slate-700" %>
    <%= form.text_field :name, class: "mt-1 block w-full rounded-lg border-slate-300 shadow-sm focus:border-cyan-500 focus:ring-cyan-500 border px-3 py-2", placeholder: "property" %>
  </div>

  <div class="mb-4 flex items-center gap-2">
    <%= form.check_box :is_liability, class: "rounded border-slate-300 text-cyan-600 shadow-sm focus:border-cyan-500 focus:ring-cyan-500" %>
    <%= form.label :is_liability, "Is this a liability?", class: "text-sm font-medium text-slate-700" %>
  </div>

  <div class="flex space-x-4">
    <%= form.submit class: "rounded-lg px-4 py-2 bg-cyan-500 hover:bg-cyan-500 text-white font-medium cursor-pointer" %>
    <%= link_to "Cancel", admin_asset_types_path, class: "rounded-lg px-4 py-2 bg-slate-100 hover:bg-slate-50 font-medium" %>
  </div>
<% end %>
