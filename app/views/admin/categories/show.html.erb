<% content_for :title, "Category - Admin" %>

<div class="max-w-md">
  <h1 class="text-2xl font-bold text-gray-900 mb-6">Category: <%= @category.name.capitalize %></h1>

  <div class="bg-white rounded-lg shadow p-6 mb-6">
    <p class="text-gray-700 mb-2"><strong>Name:</strong> <%= @category.name.capitalize %></p>
    <p class="text-gray-700">
      <strong>Type:</strong>
      <% if @category.category_type == "income" %>
        <span class="px-2 py-1 text-xs font-medium rounded-full bg-green-100 text-green-800">Income</span>
      <% else %>
        <span class="px-2 py-1 text-xs font-medium rounded-full bg-red-100 text-red-800">Expense</span>
      <% end %>
    </p>
  </div>

  <div class="flex space-x-4">
    <%= link_to "Edit", edit_admin_category_path(@category), class: "rounded-md px-4 py-2 bg-blue-600 hover:bg-blue-500 text-white font-medium" %>
    <%= link_to "Back", admin_categories_path, class: "rounded-md px-4 py-2 bg-gray-100 hover:bg-gray-50 font-medium" %>
    <%= button_to "Delete", admin_category_path(@category), method: :delete, class: "rounded-md px-4 py-2 bg-red-600 hover:bg-red-500 text-white font-medium cursor-pointer", data: { turbo_confirm: "Are you sure?" } %>
  </div>
</div>
