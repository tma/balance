<% content_for :title, "Categories - Admin" %>

<div class="w-full">
  <div class="flex justify-between items-center mb-6">
    <h1 class="<%= ui_title_class %>">Categories</h1>
    <%= link_to "New Category", new_admin_category_path, class: ui_btn_primary_class %>
  </div>

  <div class="<%= ui_card_class %> overflow-hidden">
    <% if @categories.any? %>
      <table class="min-w-full">
        <thead class="<%= ui_table_header_class %>">
          <tr>
            <th class="<%= ui_table_th_class %> text-left">Name</th>
            <th class="<%= ui_table_th_class %> text-left">Type</th>
            <th class="<%= ui_table_th_class %> text-right w-24"></th>
          </tr>
        </thead>
        <tbody>
          <% @categories.each do |category| %>
            <tr class="<%= ui_table_row_class %>">
              <td class="<%= ui_table_td_class %> font-medium <%= ui_text_class %>"><%= category.name %></td>
              <td class="<%= ui_table_td_class %>">
                <% if category.category_type == "income" %>
                  <span class="<%= ui_badge_success_class %>">Income</span>
                <% else %>
                  <span class="<%= ui_badge_danger_class %>">Expense</span>
                <% end %>
              </td>
              <td class="<%= ui_table_td_class %> text-right whitespace-nowrap">
                <div class="flex items-center justify-end gap-2">
                  <%= link_to "Edit", edit_admin_category_path(category), class: ui_link_class %>
                  <%= button_to "Delete", admin_category_path(category), method: :delete, class: "text-rose-500 hover:text-rose-600 dark:text-rose-400 dark:hover:text-rose-300", form: { data: { turbo_confirm: "Are you sure?" } } %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <p class="<%= ui_empty_class %>">No categories found.</p>
    <% end %>
  </div>
</div>
