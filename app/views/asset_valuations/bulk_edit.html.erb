<%= form_with url: update_valuations_path, method: :patch, data: { controller: "currency-form", action: "submit->currency-form#unformatAll" } do |form| %>
  <%= hidden_field_tag :year, @year %>
<div class="space-y-4">
  <div class="flex justify-between items-center">
    <div>
      <h1 class="<%= ui_title_class %>">Valuations</h1>
      <p class="text-sm <%= ui_text_muted_class %> mt-1">Enter values for each month (end of month)</p>
    </div>
    <div class="flex items-center space-x-4">
      <% if @has_broker_connections %>
        <%= button_to "Apply Broker Values", apply_broker_values_path, method: :post, class: ui_btn_secondary_class + " text-sm", title: "Copy latest broker position values to assets" %>
      <% end %>
      <div class="flex items-center space-x-2">
        <%= link_to update_valuations_path(year: @year - 1), class: ui_btn_secondary_class + " text-sm" do %>
          ← <%= @year - 1 %>
        <% end %>
        <span class="px-3 py-1.5 font-semibold text-sm <%= ui_text_class %>"><%= @year %></span>
        <% max_year = Date.current.year + 1 %>
        <% if @year < max_year %>
          <%= link_to update_valuations_path(year: @year + 1), class: ui_btn_secondary_class + " text-sm" do %>
            <%= @year + 1 %> →
          <% end %>
        <% else %>
          <span class="px-3 py-1.5 rounded-lg bg-slate-50 dark:bg-slate-800 text-slate-300 dark:text-slate-600 text-sm font-medium"><%= max_year + 1 %> →</span>
        <% end %>
      </div>
      <%= form.submit "Save", class: ui_btn_primary_class + " cursor-pointer" %>
    </div>
  </div>

    <% has_assets = @asset_groups.joins(:assets).distinct.any? %>

    <% if has_assets %>
      <%# Build flat list of active assets only for tabindex calculation (column-first order) %>
      <% all_active_assets = @asset_groups.flat_map { |g| g.assets.active.includes(:asset_type).order("asset_types.is_liability ASC", :name) } %>
      <% total_assets = all_active_assets.size %>
      <% asset_row_index = {} %>
      <% all_active_assets.each_with_index { |a, i| asset_row_index[a.id] = i } %>

      <div class="<%= ui_card_class %> overflow-hidden">
        <% current_month = Date.current.end_of_month %>
        <% ideal_scroll_month = (Date.current - 2.months).end_of_month %>
        <%# Find best scroll target: ideal month if in range, otherwise current month, otherwise nil %>
        <% scroll_target_month = @months.include?(ideal_scroll_month) ? ideal_scroll_month : (@months.include?(current_month) ? current_month : nil) %>
        <div style="height: calc(100vh - 140px); overflow: auto;" data-controller="scroll-right" data-scroll-right-target-value="<%= scroll_target_month ? '.scroll-target' : '' %>">
          <table class="w-full min-w-max">
            <thead>
              <tr>
                <th style="position: sticky; left: 0; top: 0; z-index: 30;" class="bg-slate-50 dark:bg-slate-800 border-b border-slate-200 dark:border-slate-700 px-4 py-2 text-left text-xs font-semibold <%= ui_text_muted_class %> uppercase tracking-wider min-w-[200px]">
                  Asset
                </th>
                <% @months.each do |month| %>
                  <% is_adjacent = month.year != @year %>
                  <% is_current = month == current_month %>
                  <% is_scroll_target = month == scroll_target_month %>
                  <%
                    month_text_class = if is_current
                      "text-slate-900 dark:text-slate-100"
                    elsif is_adjacent
                      "text-slate-300 dark:text-slate-600"
                    else
                      ui_text_muted_class
                    end
                  %>
                  <th style="position: sticky; top: 0; z-index: 20;" class="bg-slate-50 dark:bg-slate-800 border-b border-slate-200 dark:border-slate-700 px-2 py-2 text-center text-xs font-semibold uppercase tracking-wider min-w-[100px] <%= month_text_class %> <%= 'scroll-target' if is_scroll_target %>" <%= 'data-current-month' if is_current %>>
                    <%= month.strftime("%b %Y") %>
                  </th>
                <% end %>
              </tr>
            </thead>
            <tbody>
              <% @asset_groups.each_with_index do |group, group_index| %>
                <% active_assets = group.assets.active.includes(:asset_type).order("asset_types.is_liability ASC", :name) %>
                <% archived_assets = group.assets.archived.includes(:asset_type).order("asset_types.is_liability ASC", :name) %>
                <% next if active_assets.empty? && archived_assets.empty? %>

                <%# Group header row %>
                <tr class="<%= ui_table_group_header_class %> <%= group_index > 0 ? 'border-t-4 border-slate-300 dark:border-slate-600' : 'border-t border-slate-200 dark:border-slate-700' %>">
                  <td class="sticky left-0 z-10 bg-slate-200 dark:bg-slate-700 px-4 py-2">
                    <span class="inline-flex items-center">
                      <svg class="flex-shrink-0 mr-2" width="16" height="16"><rect width="16" height="16" fill="<%= group.color || '#94a3b8' %>"/></svg>
                      <span class="font-semibold <%= ui_table_group_text_class %> whitespace-nowrap"><%= group.name %></span>
                    </span>
                  </td>
                  <% @months.each do |month| %>
                    <% is_adjacent = month.year != @year %>
                    <td class="bg-slate-200 dark:bg-slate-700 <%= is_adjacent ? 'opacity-50' : '' %>"></td>
                  <% end %>
                </tr>

                <%# Active assets %>
                <% active_assets.each do |asset| %>
                  <% has_broker = @broker_asset_ids.include?(asset.id) %>
                  <tr class="group hover:bg-slate-50 dark:hover:bg-slate-900 transition border-t border-slate-100 dark:border-slate-700" data-controller="copy-previous">
                    <td class="sticky left-0 z-10 bg-white dark:bg-slate-800 group-hover:bg-slate-50 dark:group-hover:bg-slate-900 px-4 py-2">
                      <%= link_to asset, class: "block" do %>
                        <p class="text-sm font-medium <%= ui_text_class %> hover:text-cyan-600 dark:hover:text-cyan-400 whitespace-nowrap">
                          <%= asset.name %>
                          <% if has_broker %>
                            <span class="<%= ui_badge_info_class %> ml-1" title="Linked to broker">Broker</span>
                          <% end %>
                        </p>
                        <p class="text-xs <%= ui_text_subtle_class %> whitespace-nowrap">
                          <%= asset.asset_type.name %> · <%= asset.currency %><% if asset.asset_type.is_liability %> <span class="<%= ui_badge_danger_class %> ml-1">Liability</span><% end %>
                        </p>
                      <% end %>
                    </td>
                    <% @months.each_with_index do |month, month_idx| %>
                      <% is_adjacent = month.year != @year %>
                      <td class="px-2 py-2 <%= is_adjacent ? 'bg-slate-100 dark:bg-slate-900' : '' %>">
                        <% existing_value = @valuations_by_asset_and_month[asset.id][month] %>
                        <% existing_formula = @formulas_by_asset_and_month[asset.id][month] %>
                        <% is_liability = asset.asset_type.is_liability %>
                        <% is_last = month_idx == @months.length - 1 %>
                        <% is_second_last = month_idx == @months.length - 2 %>
                        <% tab_index = (month_idx * total_assets) + asset_row_index[asset.id] + 1 %>
                        <div class="relative">
                          <% if is_last %>
                            <button type="button" 
                                    data-action="click->copy-previous#copy"
                                    class="absolute inset-y-0 flex items-center <%= ui_text_subtle_class %> hover:text-cyan-600 dark:hover:text-cyan-400 text-xs" 
                                    style="left: 8px;"
                                    tabindex="-1"
                                    title="Copy from previous month">→</button>
                          <% end %>
                          <input type="text"
                                 inputmode="decimal"
                                 name="valuations[<%= asset.id %>][<%= month.iso8601 %>]"
                                 value="<%= existing_formula.presence || existing_value&.to_f %>"
                                 tabindex="<%= tab_index %>"
                                 data-controller="currency-input"
                                 data-currency-form-target="input"
                                 data-currency-input-liability-value="<%= is_liability %>"
                                 data-currency-input-original-value="<%= existing_value&.to_f %>"
                                 data-currency-input-formula-value="<%= existing_formula %>"
                                 data-action="focus->currency-input#unformat blur->currency-input#format"
                                 <% if is_second_last %>data-copy-previous-target="source"<% end %>
                                 <% if is_last %>data-copy-previous-target="destination"<% end %>
                                 class="<%= ui_input_sm_class %> w-32 text-right <%= existing_value ? '' : 'bg-slate-50 dark:bg-slate-900' %> <%= is_adjacent ? 'text-slate-400 dark:text-slate-500' : '' %>"
                                 style="<%= is_last ? 'padding-left: 1.75rem;' : '' %>"
                                 placeholder="—">
                        </div>
                      </td>
                    <% end %>
                  </tr>
                <% end %>

                <%# Archived assets - collapsible section %>
                <% if archived_assets.any? %>
              </tbody>
              <tbody data-controller="collapsible">
                  <tr class="group border-t border-slate-100 dark:border-slate-700 cursor-pointer" data-action="click->collapsible#toggle">
                    <td class="sticky left-0 bg-white dark:bg-slate-800 group-hover:bg-slate-50 dark:group-hover:bg-slate-900 px-4 py-1 z-10 text-xs <%= ui_text_subtle_class %>">
                      <span data-collapsible-target="icon">▶</span>
                      <span class="ml-1">Archived</span>
                    </td>
                    <% @months.each do |month| %>
                      <% is_adjacent = month.year != @year %>
                      <td class="bg-white dark:bg-slate-800 group-hover:bg-slate-50 dark:group-hover:bg-slate-900 py-1 <%= is_adjacent ? 'opacity-50' : '' %>"></td>
                    <% end %>
                  </tr>
                  <% archived_assets.each do |asset| %>
                    <tr class="group transition border-t border-slate-100 dark:border-slate-700 hidden" data-collapsible-target="content">
                      <td class="sticky left-0 bg-slate-100 dark:bg-slate-900 group-hover:bg-slate-200 dark:group-hover:bg-slate-800 px-4 py-2 z-10">
                        <%= link_to asset, class: "block" do %>
                          <p class="text-sm font-medium <%= ui_text_subtle_class %> hover:text-cyan-600 dark:hover:text-cyan-400 whitespace-nowrap">
                            <%= asset.name %>
                            <span class="<%= ui_badge_class %> ml-1">Archived</span>
                          </p>
                          <p class="text-xs <%= ui_text_subtle_class %> whitespace-nowrap">
                            <%= asset.asset_type.name %> · <%= asset.currency %><% if asset.asset_type.is_liability %> <span class="<%= ui_badge_danger_class %> ml-1 opacity-50">Liability</span><% end %>
                          </p>
                        <% end %>
                      </td>
                      <% @months.each do |month| %>
                        <% is_adjacent = month.year != @year %>
                        <td class="px-2 py-2 bg-slate-100 dark:bg-slate-900 group-hover:bg-slate-200 dark:group-hover:bg-slate-800 <%= is_adjacent ? 'opacity-50' : '' %>">
                          <% existing_value = @valuations_by_asset_and_month[asset.id][month] %>
                          <% existing_formula = @formulas_by_asset_and_month[asset.id][month] %>
                          <% is_liability = asset.asset_type.is_liability %>
                          <div class="relative">
                            <input type="text"
                                   inputmode="decimal"
                                   name="valuations[<%= asset.id %>][<%= month.iso8601 %>]"
                                   value="<%= existing_formula.presence || existing_value&.to_f %>"
                                   tabindex="-1"
                                   data-controller="currency-input"
                                   data-currency-form-target="input"
                                   data-currency-input-liability-value="<%= is_liability %>"
                                   data-currency-input-original-value="<%= existing_value&.to_f %>"
                                   data-currency-input-formula-value="<%= existing_formula %>"
                                   data-action="focus->currency-input#unformat blur->currency-input#format"
                                   class="<%= ui_input_sm_class %> w-32 text-right <%= ui_text_subtle_class %> <%= existing_value ? 'bg-white dark:bg-slate-800' : 'bg-slate-50 dark:bg-slate-900' %>"
                                   placeholder="—">
                          </div>
                        </td>
                      <% end %>
                    </tr>
                  <% end %>
              </tbody>
              <tbody>
                <% end %>

                <%# Group totals row (includes active and archived assets) %>
                <tr class="<%= ui_table_subtotal_class %>">
                  <td class="sticky left-0 bg-slate-50 dark:bg-slate-800 px-4 py-2 z-10 h-10">
                  </td>
                  <% @months.each do |month| %>
                    <% is_adjacent = month.year != @year %>
                    <td class="bg-slate-50 dark:bg-slate-800 px-2 py-2 text-right h-10 <%= is_adjacent ? 'opacity-50' : '' %>">
                      <% net_value = @group_totals_by_month[group.id][month] %>
                      <% if net_value && net_value != 0 %>
                        <span class="font-semibold text-sm whitespace-nowrap <%= ui_text_muted_class %>"><%= format_currency(net_value, precision: 0) %></span>
                      <% end %>
                    </td>
                  <% end %>
                </tr>
              <% end %>

              <%# Total Net Worth row %>
              <tr class="<%= ui_table_total_class %>">
                <td class="sticky left-0 bg-slate-200 dark:bg-slate-700 px-4 py-3 z-10">
                  <span class="font-bold <%= ui_text_class %> whitespace-nowrap">Total Net Worth</span>
                </td>
                <% @months.each do |month| %>
                  <% is_adjacent = month.year != @year %>
                  <td class="bg-slate-200 dark:bg-slate-700 px-2 py-3 text-right <%= is_adjacent ? 'opacity-50' : '' %>">
                    <% total = @totals_by_month[month] %>
                    <span class="font-bold text-sm whitespace-nowrap <%= ui_text_class %>"><%= format_currency(total, precision: 0) %></span>
                  </td>
                <% end %>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    <% else %>
      <div class="<%= ui_card_class %> p-8 text-center">
        <p class="<%= ui_text_muted_class %> mb-4">No assets found.</p>
        <%= link_to "Create an asset", new_asset_path, class: ui_link_class %>
      </div>
    <% end %>
</div>
<% end %>
