<div class="space-y-6">
  <div class="flex justify-between items-center">
    <div>
      <h1 class="text-2xl font-bold text-slate-800">Update Valuations</h1>
    </div>
    <%= link_to "Net Worth", net_worth_path, class: "text-cyan-600 hover:text-cyan-700 hover:underline" %>
  </div>

  <%= form_with url: update_valuations_path, method: :patch, class: "space-y-6" do |form| %>
    <div class="bg-white rounded-xl border border-slate-200 p-4">
      <div class="flex items-center space-x-4">
        <label for="date" class="text-sm font-medium text-slate-700">Valuation Date</label>
        <input type="date"
               name="date"
               id="date"
               value="<%= @date %>"
               class="rounded-lg border-slate-300 shadow-sm focus:border-cyan-500 focus:ring-cyan-500 border px-3 py-1.5 text-sm">
      </div>
    </div>

    <% @asset_groups.each do |group| %>
      <% assets = group.assets.includes(:asset_type).order("asset_types.is_liability ASC", :name) %>
      <% next if assets.empty? %>

      <div class="bg-white rounded-xl border border-slate-200 overflow-hidden">
        <div class="p-4 border-b border-slate-200 flex justify-between items-start">
          <div>
            <h3 class="font-semibold text-slate-700"><%= group.name %></h3>
            <% if group.description.present? %>
              <p class="text-sm text-slate-400"><%= group.description %></p>
            <% end %>
          </div>
          <div class="text-right">
            <% net_value = group.net_value_in_default_currency %>
            <p class="font-bold <%= net_value >= 0 ? 'text-emerald-600' : 'text-rose-500' %>"><%= format_currency(net_value) %></p>
          </div>
        </div>

        <div class="divide-y divide-slate-100">
          <% assets.each do |asset| %>
            <div class="flex items-center justify-between p-4 hover:bg-slate-50 transition">
              <div class="flex items-center space-x-2">
                <div>
                  <%= link_to asset, class: "block" do %>
                    <p class="text-sm font-medium text-slate-700 hover:text-cyan-600"><%= asset.name %></p>
                    <p class="text-xs text-slate-400"><%= asset.asset_type.name %></p>
                  <% end %>
                </div>
                <% if asset.asset_type.is_liability %>
                  <span class="px-1.5 py-0.5 rounded text-xs bg-rose-100 text-rose-600">Liability</span>
                <% end %>
              </div>
              <div class="flex items-center space-x-2">
                <span class="text-sm text-slate-400"><%= asset.currency %></span>
                <input type="number"
                       name="assets[<%= asset.id %>]"
                       value="<%= asset.value.to_f %>"
                       step="0.01"
                       class="w-32 text-right rounded-lg border-slate-300 shadow-sm focus:border-cyan-500 focus:ring-cyan-500 border px-3 py-1.5 text-sm"
                       placeholder="0.00">
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>

    <% if @asset_groups.joins(:assets).distinct.none? %>
      <div class="bg-white rounded-xl border border-slate-200 p-8 text-center">
        <p class="text-slate-500 mb-4">No assets found.</p>
        <%= link_to "Create an asset", new_asset_path, class: "text-cyan-600 hover:text-cyan-700" %>
      </div>
    <% else %>
      <div class="flex justify-end space-x-4">
        <%= link_to "Cancel", net_worth_path, class: "rounded-lg px-4 py-2 bg-slate-100 hover:bg-slate-200 text-slate-700 font-medium transition" %>
        <%= form.submit "Save All", class: "rounded-lg px-4 py-2 bg-cyan-500 hover:bg-cyan-600 text-white font-medium cursor-pointer transition" %>
      </div>
    <% end %>
  <% end %>
</div>
