<% content_for :title, "Edit Valuation" %>

<div class="max-w-md mx-auto">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold text-slate-800">Edit Valuation</h1>
    <%= link_to "Back", @asset, class: "text-cyan-600 hover:text-cyan-700 hover:underline" %>
  </div>

  <div class="bg-white rounded-xl border border-slate-200 p-6">
    <div class="mb-4">
      <p class="text-sm text-slate-500">Asset</p>
      <p class="text-lg font-medium text-slate-800"><%= @asset.name %> (<%= @asset.currency %>)</p>
    </div>

    <%= form_with model: [@asset, @valuation], url: asset_valuation_path(@asset, @valuation), method: :patch do |form| %>
      <% if @valuation.errors.any? %>
        <div class="mb-4 p-4 bg-rose-50 border border-rose-200 rounded-lg">
          <ul class="text-sm text-rose-600">
            <% @valuation.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="mb-4">
        <%= form.label :value, "Value", class: "block text-sm font-medium text-slate-700 mb-1" %>
        <%= form.number_field :value, step: 0.01, class: "w-full rounded-lg border-slate-300 shadow-sm focus:border-cyan-500 focus:ring-cyan-500 border px-3 py-2" %>
      </div>

      <div class="mb-6">
        <%= form.label :date, "Valuation Date", class: "block text-sm font-medium text-slate-700 mb-1" %>
        <%= form.date_field :date, class: "w-full rounded-lg border-slate-300 shadow-sm focus:border-cyan-500 focus:ring-cyan-500 border px-3 py-2" %>
      </div>

      <div class="flex justify-end space-x-4">
        <%= link_to "Cancel", @asset, class: "rounded-lg px-4 py-2 bg-slate-100 hover:bg-slate-200 text-slate-700 font-medium transition" %>
        <%= form.submit "Save", class: "rounded-lg px-4 py-2 bg-cyan-500 hover:bg-cyan-600 text-white font-medium cursor-pointer transition" %>
      </div>
    <% end %>
  </div>
</div>
