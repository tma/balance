<div class="max-w-4xl mx-auto">
  <h1 class="text-2xl font-bold mb-6">Update Asset Valuations</h1>

  <%= form_with url: update_valuations_path, method: :patch, class: "space-y-8" do |form| %>
    <%= form.hidden_field :date, value: @date %>

    <% @asset_groups.each do |group| %>
      <% assets = group.assets.includes(:asset_type).order("asset_types.is_liability ASC", :name) %>
      <% next if assets.empty? %>

      <div class="bg-white rounded-lg shadow overflow-hidden">
        <div class="bg-slate-100 px-4 py-3 border-b">
          <h2 class="font-semibold text-lg"><%= group.name %></h2>
          <% if group.description.present? %>
            <p class="text-sm text-gray-500"><%= group.description %></p>
          <% end %>
        </div>

        <div class="divide-y">
          <% group_assets = assets.select { |a| !a.asset_type.is_liability } %>
          <% group_liabilities = assets.select { |a| a.asset_type.is_liability } %>

          <% if group_assets.any? %>
            <div class="px-4 py-2 bg-green-50">
              <span class="text-sm font-medium text-green-700">Assets</span>
            </div>
            <% group_assets.each do |asset| %>
              <div class="flex items-center px-4 py-3 hover:bg-gray-50">
                <div class="flex-1 min-w-0">
                  <p class="font-medium text-gray-900 truncate"><%= asset.name %></p>
                  <p class="text-sm text-gray-500"><%= asset.asset_type.name %></p>
                </div>
                <div class="flex items-center space-x-2">
                  <span class="text-sm text-gray-500"><%= asset.currency %></span>
                  <input type="number"
                         name="assets[<%= asset.id %>]"
                         value="<%= asset.value.to_f %>"
                         step="0.01"
                         class="w-32 text-right rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 border px-3 py-2"
                         placeholder="0.00">
                </div>
              </div>
            <% end %>
          <% end %>

          <% if group_liabilities.any? %>
            <div class="px-4 py-2 bg-red-50">
              <span class="text-sm font-medium text-red-700">Liabilities</span>
            </div>
            <% group_liabilities.each do |asset| %>
              <div class="flex items-center px-4 py-3 hover:bg-gray-50">
                <div class="flex-1 min-w-0">
                  <p class="font-medium text-gray-900 truncate"><%= asset.name %></p>
                  <p class="text-sm text-gray-500"><%= asset.asset_type.name %></p>
                </div>
                <div class="flex items-center space-x-2">
                  <span class="text-sm text-gray-500"><%= asset.currency %></span>
                  <input type="number"
                         name="assets[<%= asset.id %>]"
                         value="<%= asset.value.to_f %>"
                         step="0.01"
                         class="w-32 text-right rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 border px-3 py-2"
                         placeholder="0.00">
                </div>
              </div>
            <% end %>
          <% end %>
        </div>

        <!-- Group totals -->
        <div class="bg-slate-50 px-4 py-3 border-t">
          <div class="flex justify-between text-sm">
            <span class="text-gray-600">Net Value:</span>
            <div class="text-right">
              <% group.net_value_by_currency.each do |currency, value| %>
                <span class="<%= value >= 0 ? 'text-green-600' : 'text-red-600' %> font-medium">
                  <%= number_to_currency(value, unit: currency + " ", precision: 2) %>
                </span>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <% if @asset_groups.joins(:assets).distinct.none? %>
      <div class="bg-white rounded-lg shadow p-8 text-center">
        <p class="text-gray-500 mb-4">No assets found.</p>
        <%= link_to "Create your first asset", new_asset_path, class: "text-blue-600 hover:text-blue-500" %>
      </div>
    <% else %>
      <div class="flex justify-end space-x-4">
        <%= link_to "Cancel", root_path, class: "rounded-md px-4 py-2 bg-gray-100 hover:bg-gray-50 font-medium" %>
        <%= form.submit "Save All Changes", class: "rounded-md px-4 py-2 bg-blue-600 hover:bg-blue-500 text-white font-medium cursor-pointer" %>
      </div>
    <% end %>
  <% end %>
</div>
