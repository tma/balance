<% content_for :title, "Edit Valuation" %>

<div class="max-w-md mx-auto">
  <div class="flex justify-between items-center mb-6">
    <h1 class="<%= ui_title_class %>">Edit Valuation</h1>
    <%= link_to "Back", @asset, class: ui_link_class %>
  </div>

  <div class="<%= ui_card_class %> p-6">
    <div class="mb-4">
      <p class="text-sm <%= ui_text_muted_class %>">Asset</p>
      <p class="text-lg font-medium <%= ui_text_class %>"><%= @asset.name %> (<%= @asset.currency %>)</p>
    </div>

    <%= form_with model: [@asset, @valuation], url: asset_valuation_path(@asset, @valuation), method: :patch do |form| %>
      <% if @valuation.errors.any? %>
        <div class="<%= ui_alert_error_class %> mb-4">
          <ul class="text-sm">
            <% @valuation.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="mb-4">
        <%= form.label :value, "Value", class: ui_label_class %>
        <%= form.number_field :value, step: 0.01, class: ui_input_class %>
      </div>

      <div class="mb-6">
        <%= form.label :date, "Valuation Date", class: ui_label_class %>
        <%= form.date_field :date, class: ui_input_class %>
      </div>

      <div class="flex justify-end space-x-4">
        <%= link_to "Cancel", @asset, class: ui_btn_secondary_class %>
        <%= form.submit "Save", class: ui_btn_primary_class + " cursor-pointer" %>
      </div>
    <% end %>
  </div>
</div>
