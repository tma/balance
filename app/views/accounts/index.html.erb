<% content_for :title, "Accounts" %>

<div class="w-full">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold text-gray-900">Accounts</h1>
    <%= link_to "New Account", new_account_path, class: "rounded-md px-4 py-2 bg-blue-600 hover:bg-blue-500 text-white font-medium" %>
  </div>

  <% if @accounts.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
      <% @accounts.each do |account| %>
        <div class="bg-white rounded-lg shadow p-6">
          <div class="flex justify-between items-start mb-4">
            <div>
              <h3 class="text-lg font-semibold text-gray-900"><%= account.name %></h3>
              <p class="text-sm text-gray-500"><%= account.account_type.name.capitalize %></p>
            </div>
            <span class="text-xs font-medium px-2 py-1 bg-gray-100 rounded"><%= account.currency %></span>
          </div>
          <p class="text-2xl font-bold <%= account.balance >= 0 ? 'text-green-600' : 'text-red-600' %> mb-4">
            <%= number_to_currency(account.balance, unit: "") %>
          </p>
          <div class="flex space-x-2 text-sm">
            <%= link_to "View", account, class: "text-blue-600 hover:underline" %>
            <%= link_to "Edit", edit_account_path(account), class: "text-blue-600 hover:underline" %>
            <%= button_to "Delete", account, method: :delete, class: "text-red-600 hover:underline", data: { turbo_confirm: "Are you sure? This will delete all associated transactions." } %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="bg-white rounded-lg shadow p-6 text-center">
      <p class="text-gray-500 mb-4">No accounts yet.</p>
      <%= link_to "Create your first account", new_account_path, class: "text-blue-600 hover:underline" %>
    </div>
  <% end %>
</div>
