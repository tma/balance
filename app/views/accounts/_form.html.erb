<%= form_with(model: account, class: "contents") do |form| %>
  <% if account.errors.any? %>
    <div class="<%= ui_alert_error_class %> mb-4">
      <h2 class="font-medium"><%= pluralize(account.errors.count, "error") %> prohibited this account from being saved:</h2>
      <ul class="list-disc ml-6 mt-2">
        <% account.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-4">
    <%= form.label :name, class: ui_label_class %>
    <%= form.text_field :name, class: "mt-1 #{ui_input_class}", placeholder: "My Checking Account" %>
  </div>

  <div class="mb-4">
    <%= form.label :account_type_id, "Account Type", class: ui_label_class %>
    <%= form.collection_select :account_type_id, AccountType.order(:name), :id, :name, { prompt: "Select account type" }, class: "mt-1 #{ui_input_class}" %>
  </div>

  <div class="mb-4">
    <%= form.label :balance, class: ui_label_class %>
    <%= form.number_field :balance, step: 0.01, class: "mt-1 #{ui_input_class}", placeholder: "0.00" %>
  </div>

  <div class="mb-4">
    <%= form.label :currency, class: ui_label_class %>
    <% if account.persisted? %>
      <%= form.select :currency, Currency.order(:code).pluck(:code), { selected: account.currency }, { class: "mt-1 w-full px-3 py-2 border border-slate-200 dark:border-slate-600 bg-slate-100 dark:bg-slate-600 text-slate-500 dark:text-slate-400 cursor-not-allowed", disabled: true } %>
      <%= form.hidden_field :currency %>
      <p class="mt-1 text-xs <%= ui_text_subtle_class %>">Currency cannot be changed after creation.</p>
    <% else %>
      <%= form.select :currency, Currency.order(:code).pluck(:code), { selected: account.currency || Currency.default&.code }, class: "mt-1 #{ui_input_class}" %>
    <% end %>
  </div>

  <div class="mb-4">
    <%= form.label :import_ignore_patterns, "Import Ignore Patterns", class: ui_label_class %>
    <%= form.text_area :import_ignore_patterns,
        rows: 6,
        class: "mt-1 #{ui_input_class} font-mono text-sm",
        placeholder: Account::DEFAULT_IGNORE_PATTERNS.strip %>
    <p class="mt-1 text-xs <%= ui_text_muted_class %>">One pattern per line. Transactions containing these texts will be ignored during import. Case-sensitive. Leave blank for defaults.</p>
  </div>

  <div class="mb-4" data-controller="frequency-preset">
    <%= form.label :expected_transaction_frequency, "Transaction Frequency", class: ui_label_class %>
    <div class="flex items-stretch gap-2 mt-1">
      <select class="<%= ui_input_class %>"
              data-frequency-preset-target="preset"
              data-action="change->frequency-preset#selectPreset">
        <% Account::FREQUENCY_PRESETS.each do |label, value| %>
          <option value="<%= value %>" <%= "selected" if value.to_s == account.expected_transaction_frequency.to_s %>><%= label %></option>
        <% end %>
      </select>
      <%= form.number_field :expected_transaction_frequency,
          min: 1,
          step: 1,
          placeholder: "Days",
          class: "w-24 #{ui_input_class}",
          data: { frequency_preset_target: "input", action: "input->frequency-preset#syncPreset" } %>
      <span class="text-sm <%= ui_text_subtle_class %> flex items-center">days</span>
    </div>
    <p class="mt-1 text-xs <%= ui_text_muted_class %>">Max days between transactions. Used to detect missing transactions. Pick a preset or type a custom number.</p>
  </div>

  <div class="flex space-x-4">
    <%= form.submit class: "#{ui_btn_primary_class} cursor-pointer" %>
    <%= link_to "Cancel", accounts_path, class: ui_btn_secondary_class %>
  </div>
<% end %>
