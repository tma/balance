<div class="space-y-6">
  <div class="flex justify-between items-center">
    <div>
      <h1 class="text-2xl font-bold text-slate-800">Net Worth</h1>
      <p class="text-sm text-slate-500">All values in <%= @default_currency %></p>
    </div>
    <%= link_to "Cash Flow", cash_flow_path, class: "text-cyan-600 hover:text-cyan-700 hover:underline" %>
  </div>

  <!-- Net Worth Summary -->
  <div class="bg-white rounded-xl border border-slate-200 p-6">
    <h2 class="text-lg font-semibold text-slate-800 mb-4">Summary</h2>
    <% if @net_worth[:net_worth] == 0 && @net_worth[:cash] == 0 && @net_worth[:assets] == 0 %>
      <p class="text-slate-500">No financial data yet. Add accounts or assets to get started.</p>
    <% else %>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4 text-center">
        <div>
          <p class="text-2xl font-bold text-cyan-500"><%= number_to_currency(@net_worth[:cash], unit: @default_currency + " ") %></p>
          <p class="text-sm text-slate-500">Cash (Accounts)</p>
        </div>
        <div>
          <p class="text-2xl font-bold text-emerald-500"><%= number_to_currency(@net_worth[:assets], unit: @default_currency + " ") %></p>
          <p class="text-sm text-slate-500">Assets</p>
        </div>
        <div>
          <p class="text-2xl font-bold text-rose-400"><%= number_to_currency(@net_worth[:liabilities], unit: @default_currency + " ") %></p>
          <p class="text-sm text-slate-500">Liabilities</p>
        </div>
        <div>
          <p class="text-2xl font-bold <%= @net_worth[:net_worth] >= 0 ? 'text-emerald-500' : 'text-rose-400' %>">
            <%= number_to_currency(@net_worth[:net_worth], unit: @default_currency + " ") %>
          </p>
          <p class="text-sm text-slate-500">Net Worth</p>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Asset Groups Breakdown -->
  <div class="bg-white rounded-xl border border-slate-200 overflow-hidden">
    <div class="p-4 border-b border-slate-200 flex justify-between items-center">
      <h2 class="text-lg font-semibold text-slate-800">Assets by Group</h2>
      <%= link_to "Update Values", update_valuations_path, class: "text-sm text-cyan-600 hover:text-cyan-700 hover:underline" %>
    </div>

    <% if @asset_groups.none? { |g| g.assets.any? } %>
      <div class="p-6 text-center">
        <p class="text-slate-500 mb-4">No assets yet.</p>
        <%= link_to "Add your first asset", new_asset_path, class: "text-cyan-600 hover:underline" %>
      </div>
    <% else %>
      <div class="divide-y divide-slate-100">
        <% @asset_groups.each do |group| %>
          <% next if group.assets.empty? %>
          <div class="p-4">
            <div class="flex justify-between items-start mb-3">
              <div>
                <h3 class="font-semibold text-slate-700"><%= group.name %></h3>
                <% if group.description.present? %>
                  <p class="text-sm text-slate-400"><%= group.description %></p>
                <% end %>
              </div>
              <div class="text-right">
                <% net_value = group.net_value_in_default_currency %>
                <p class="font-semibold <%= net_value >= 0 ? 'text-emerald-500' : 'text-rose-400' %>">
                  <%= @default_currency %> <%= number_to_currency(net_value, unit: "") %>
                </p>
              </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-2">
              <% group.assets.includes(:asset_type).order("asset_types.is_liability ASC", :name).each do |asset| %>
                <%= link_to asset, class: "flex justify-between items-center p-2 rounded-lg hover:bg-slate-50 transition" do %>
                  <div class="flex items-center space-x-2">
                    <span class="w-2 h-2 rounded-full <%= asset.asset_type.is_liability ? 'bg-rose-400' : 'bg-emerald-400' %>"></span>
                    <div>
                      <p class="text-sm font-medium text-slate-700"><%= asset.name %></p>
                      <p class="text-xs text-slate-400"><%= asset.asset_type.name %></p>
                    </div>
                  </div>
                  <div class="text-right">
                    <span class="text-sm font-medium <%= asset.asset_type.is_liability ? 'text-rose-400' : 'text-emerald-500' %>">
                      <%= asset.asset_type.is_liability ? '-' : '' %><%= @default_currency %> <%= number_to_currency(asset.value_in_default_currency || 0, unit: "") %>
                    </span>
                    <% if asset.currency != @default_currency %>
                      <p class="text-xs text-slate-300"><%= asset.currency %> <%= number_to_currency(asset.value, unit: "") %></p>
                    <% end %>
                  </div>
                <% end %>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Totals -->
      <div class="bg-slate-50 p-4 border-t border-slate-200">
        <div class="flex justify-between items-center">
          <span class="font-semibold text-slate-700">Total Assets (excluding cash)</span>
          <div class="text-right">
            <div class="flex items-center justify-end space-x-4 text-sm">
              <span class="text-emerald-500">+<%= number_to_currency(@totals[:assets], unit: @default_currency + " ") %></span>
              <span class="text-rose-400">-<%= number_to_currency(@totals[:liabilities], unit: @default_currency + " ") %></span>
              <span class="font-semibold <%= @totals[:net] >= 0 ? 'text-emerald-500' : 'text-rose-400' %>">
                = <%= number_to_currency(@totals[:net], unit: @default_currency + " ") %>
              </span>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Quick Actions -->
  <div class="bg-white rounded-xl border border-slate-200 p-6">
    <h2 class="text-lg font-semibold text-slate-800 mb-4">Quick Actions</h2>
    <div class="flex flex-wrap gap-3">
      <%= link_to "Update Valuations", update_valuations_path, class: "rounded-lg px-4 py-2 bg-cyan-500 hover:bg-cyan-600 text-white font-medium transition" %>
      <%= link_to "Add Asset", new_asset_path, class: "rounded-lg px-4 py-2 bg-slate-100 hover:bg-slate-200 text-slate-700 font-medium transition" %>
      <%= link_to "Add Group", new_asset_group_path, class: "rounded-lg px-4 py-2 bg-slate-100 hover:bg-slate-200 text-slate-700 font-medium transition" %>
      <%= link_to "View Accounts", accounts_path, class: "rounded-lg px-4 py-2 bg-slate-100 hover:bg-slate-200 text-slate-700 font-medium transition" %>
    </div>
  </div>
</div>
