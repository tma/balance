<div class="space-y-6">
  <div class="flex justify-between items-center">
    <div>
      <h1 class="<%= ui_title_class %>">Cash Flow</h1>
      <p class="text-sm <%= ui_text_muted_class %>">All values in <%= @default_currency %></p>
    </div>
  </div>

  <!-- 12-Month Summary -->
  <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
    <div class="<%= ui_card_class %> p-4">
      <p class="text-sm <%= ui_text_muted_class %>">Income</p>
      <p class="text-xl font-semibold <%= ui_text_class %>"><%= format_currency(@twelve_month_totals[:income]) %></p>
    </div>
    <div class="<%= ui_card_class %> p-4">
      <p class="text-sm <%= ui_text_muted_class %>">Expenses</p>
      <p class="text-xl font-semibold <%= ui_text_class %>"><%= format_currency(@twelve_month_totals[:expenses]) %></p>
    </div>
    <div class="<%= ui_card_class %> p-4">
      <p class="text-sm <%= ui_text_muted_class %>">Net Savings</p>
      <p class="text-xl font-semibold <%= @twelve_month_totals[:net] >= 0 ? ui_positive_class : ui_negative_class %>">
        <%= format_currency(@twelve_month_totals[:net]) %>
      </p>
    </div>
    <div class="<%= ui_card_class %> p-4">
      <p class="text-sm <%= ui_text_muted_class %>">Saving Rate</p>
      <p class="text-xl font-semibold <%= @twelve_month_totals[:saving_rate] >= 0 ? ui_text_class : ui_negative_class %>">
        <%= @twelve_month_totals[:saving_rate] %>%
      </p>
    </div>
  </div>

  <!-- Monthly Breakdown Table -->
  <div class="<%= ui_card_table_class %>">
    <div class="overflow-x-auto">
      <table class="min-w-full">
        <thead class="<%= ui_table_header_class %>">
          <tr>
            <th class="<%= ui_table_th_class %>">Month</th>
            <th class="<%= ui_table_th_class %> text-right">Income</th>
            <th class="<%= ui_table_th_class %> text-right">Expenses</th>
            <th class="<%= ui_table_th_class %> text-right">Net</th>
            <th class="<%= ui_table_th_class %>" style="min-width: 200px;">Breakdown</th>
          </tr>
        </thead>
        <tbody>
          <% @monthly_data.each_with_index do |month, index| %>
            <tr class="<%= index == 0 ? 'bg-cyan-50/50 dark:bg-cyan-900/20 border-t border-slate-100 dark:border-slate-700' : ui_table_row_class %>">
              <td class="<%= ui_table_td_class %> whitespace-nowrap">
                <%= link_to month[:month_name], transactions_path(month: month[:date].strftime("%Y-%m")), class: "font-medium #{ui_text_class} hover:text-cyan-600 dark:hover:text-cyan-400" %>
                <% if index == 0 %>
                  <span class="ml-2 <%= ui_badge_info_class %>">Current</span>
                <% end %>
              </td>
              <td class="<%= ui_table_td_class %> whitespace-nowrap text-right <%= ui_text_muted_class %>">
                <% if month[:income] > 0 %>
                  <%= format_currency(month[:income]) %>
                <% else %>
                  <span class="<%= ui_text_subtle_class %>">-</span>
                <% end %>
              </td>
              <td class="<%= ui_table_td_class %> whitespace-nowrap text-right <%= ui_text_muted_class %>">
                <% if month[:expenses] > 0 %>
                  <%= format_currency(month[:expenses]) %>
                <% else %>
                  <span class="<%= ui_text_subtle_class %>">-</span>
                <% end %>
              </td>
              <td class="<%= ui_table_td_class %> whitespace-nowrap text-right font-medium <%= month[:net] >= 0 ? ui_positive_class : ui_negative_class %>">
                <% if month[:income] > 0 || month[:expenses] > 0 %>
                  <%= month[:net] >= 0 ? '+' : '' %><%= format_currency(month[:net]) %>
                <% else %>
                  <span class="<%= ui_text_subtle_class %>">-</span>
                <% end %>
              </td>
              <td class="<%= ui_table_td_class %> whitespace-nowrap">
                <% if month[:income] > 0 %>
                  <% expense_pct = (month[:expenses].to_f / month[:income] * 100).round(1) %>
                  <% expense_pct = [expense_pct, 100].min %>
                  <% saved_pct = [100 - expense_pct, 0].max %>
                  <div style="height: 20px; display: flex;" class="text-xs rounded overflow-hidden">
                    <div style="width: <%= expense_pct %>%;" class="bg-rose-200 dark:bg-rose-900/50 h-full flex items-center justify-start pl-1">
                      <% if expense_pct > 25 %><span class="text-rose-700 dark:text-rose-300"><%= expense_pct.round(0) %>%</span><% end %>
                    </div>
                    <div style="width: <%= saved_pct %>%;" class="bg-emerald-200 dark:bg-emerald-900/50 h-full flex items-center justify-end pr-1">
                      <% if saved_pct > 25 %><span class="text-emerald-700 dark:text-emerald-300"><%= saved_pct.round(0) %>%</span><% end %>
                    </div>
                  </div>
                <% else %>
                  <span class="<%= ui_text_subtle_class %>">-</span>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
        <tfoot class="<%= ui_table_header_class %> font-semibold">
          <tr>
            <td class="<%= ui_table_td_class %> <%= ui_text_class %>">12-Month Total</td>
            <td class="<%= ui_table_td_class %> text-right <%= ui_text_class %>"><%= format_currency(@twelve_month_totals[:income]) %></td>
            <td class="<%= ui_table_td_class %> text-right <%= ui_text_class %>"><%= format_currency(@twelve_month_totals[:expenses]) %></td>
            <td class="<%= ui_table_td_class %> text-right <%= @twelve_month_totals[:net] >= 0 ? ui_positive_class : ui_negative_class %>">
              <%= @twelve_month_totals[:net] >= 0 ? '+' : '' %><%= format_currency(@twelve_month_totals[:net]) %>
            </td>
            <td class="<%= ui_table_td_class %>">
              <% if @twelve_month_totals[:income] > 0 %>
                <% expense_pct = (@twelve_month_totals[:expenses].to_f / @twelve_month_totals[:income] * 100).round(1) %>
                <% expense_pct = [expense_pct, 100].min %>
                <% saved_pct = [100 - expense_pct, 0].max %>
                <div style="height: 20px; display: flex;" class="text-xs rounded overflow-hidden">
                  <div style="width: <%= expense_pct %>%;" class="bg-rose-200 dark:bg-rose-900/50 h-full flex items-center justify-start pl-1">
                    <% if expense_pct > 25 %><span class="text-rose-700 dark:text-rose-300"><%= expense_pct.round(0) %>%</span><% end %>
                  </div>
                  <div style="width: <%= saved_pct %>%;" class="bg-emerald-200 dark:bg-emerald-900/50 h-full flex items-center justify-end pr-1">
                    <% if saved_pct > 25 %><span class="text-emerald-700 dark:text-emerald-300"><%= saved_pct.round(0) %>%</span><% end %>
                  </div>
                </div>
              <% end %>
            </td>
          </tr>
        </tfoot>
      </table>
    </div>
  </div>

  <!-- Budgets -->
  <% current_year = Date.current.year %>
  <% current_month = Date.current.month %>
  <div class="<%= ui_card_table_class %>">
    <div class="flex justify-between items-center <%= ui_card_header_class %>">
      <h2 class="<%= ui_heading_class %>">Budgets</h2>
      <%= link_to "Manage", budgets_path, class: ui_link_class + " text-sm" %>
    </div>
    <% if @monthly_budgets.empty? && @yearly_budgets.empty? %>
      <div class="p-8 text-center">
        <p class="<%= ui_text_muted_class %>">No budgets set. <%= link_to "Create one", new_budget_path, class: ui_link_class %>.</p>
      </div>
    <% else %>
      <div class="grid grid-cols-1 md:grid-cols-2 divide-y md:divide-y-0 md:divide-x divide-slate-200 dark:divide-slate-700">
        <div>
          <div class="px-4 py-1.5 <%= ui_table_header_class %> border-b border-slate-200 dark:border-slate-700 text-xs font-medium <%= ui_text_muted_class %>">
            Monthly
            <span class="<%= ui_text_subtle_class %> ml-2"><%= Date::MONTHNAMES[current_month] %></span>
          </div>
          <% if @monthly_budgets.any? %>
            <div class="divide-y divide-slate-100 dark:divide-slate-700">
              <% @monthly_budgets.each do |budget| %>
                <% monthly_transactions_path = transactions_path(month: Date.current.strftime("%Y-%m"), category_id: budget.category_id) %>
                <%= link_to monthly_transactions_path, class: "block px-4 py-2 hover:bg-slate-50 dark:hover:bg-slate-700/50 transition" do %>
                  <div class="flex justify-between text-sm mb-1">
                    <span class="font-medium <%= ui_text_class %>"><%= budget.category.name %></span>
                    <span class="<%= ui_text_muted_class %>">
                      <%= format_currency(budget.spent(current_year, current_month)) %> / <%= format_currency(budget.amount) %>
                    </span>
                  </div>
                  <div class="w-full bg-slate-100 dark:bg-slate-700 h-2 rounded overflow-hidden">
                    <% percentage = [budget.percentage_used(current_year, current_month), 100].min %>
                    <% bar_color = percentage >= 100 ? 'bg-rose-400' : percentage >= 80 ? 'bg-amber-400' : 'bg-emerald-400' %>
                    <div class="<%= bar_color %> h-2 transition-all" style="width: <%= percentage %>%"></div>
                  </div>
                <% end %>
              <% end %>
            </div>
          <% else %>
            <div class="p-4 text-center text-sm <%= ui_text_subtle_class %>">No monthly budgets</div>
          <% end %>
        </div>
        <div>
          <div class="px-4 py-1.5 <%= ui_table_header_class %> border-b border-slate-200 dark:border-slate-700 text-xs font-medium <%= ui_text_muted_class %>">
            Yearly
            <span class="<%= ui_text_subtle_class %> ml-2"><%= current_year %></span>
          </div>
          <% if @yearly_budgets.any? %>
            <div class="divide-y divide-slate-100 dark:divide-slate-700">
              <% @yearly_budgets.each do |budget| %>
                <% yearly_transactions_path = transactions_path(start_date: "#{current_year}-01-01", end_date: "#{current_year}-12-31", category_id: budget.category_id) %>
                <%= link_to yearly_transactions_path, class: "block px-4 py-2 hover:bg-slate-50 dark:hover:bg-slate-700/50 transition" do %>
                  <div class="flex justify-between text-sm mb-1">
                    <span class="font-medium <%= ui_text_class %>"><%= budget.category.name %></span>
                    <span class="<%= ui_text_muted_class %>">
                      <%= format_currency(budget.spent(current_year, nil)) %> / <%= format_currency(budget.amount) %>
                    </span>
                  </div>
                  <div class="w-full bg-slate-100 dark:bg-slate-700 h-2 rounded overflow-hidden">
                    <% percentage = [budget.percentage_used(current_year, nil), 100].min %>
                    <% bar_color = percentage >= 100 ? 'bg-rose-400' : percentage >= 80 ? 'bg-amber-400' : 'bg-emerald-400' %>
                    <div class="<%= bar_color %> h-2 transition-all" style="width: <%= percentage %>%"></div>
                  </div>
                <% end %>
              <% end %>
            </div>
          <% else %>
            <div class="p-4 text-center text-sm <%= ui_text_subtle_class %>">No yearly budgets</div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
