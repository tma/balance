<div id="<%= dom_id budget %>" class="w-full sm:w-auto my-5 space-y-5">
  <div>
    <strong class="block font-medium mb-1 <%= ui_text_class %>">Category:</strong>
    <span class="<%= ui_text_muted_class %>"><%= budget.category_id %></span>
  </div>
  <div>
    <strong class="block font-medium mb-1 <%= ui_text_class %>">Amount:</strong>
    <span class="<%= ui_text_muted_class %>"><%= format_amount(budget.amount) %></span>
  </div>
  <div>
    <strong class="block font-medium mb-1 <%= ui_text_class %>">Month:</strong>
    <span class="<%= ui_text_muted_class %>"><%= budget.month %></span>
  </div>
  <div>
    <strong class="block font-medium mb-1 <%= ui_text_class %>">Year:</strong>
    <span class="<%= ui_text_muted_class %>"><%= budget.year %></span>
  </div>
</div>
