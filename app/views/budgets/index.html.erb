<% content_for :title, "Budgets" %>

<div class="w-full">
  <div class="flex justify-between items-center mb-6">
    <div>
      <h1 class="text-2xl font-bold text-gray-900">Budgets</h1>
      <p class="text-gray-500"><%= Date::MONTHNAMES[@month] %> <%= @year %></p>
    </div>
    <%= link_to "New Budget", new_budget_path, class: "rounded-md px-4 py-2 bg-blue-600 hover:bg-blue-500 text-white font-medium" %>
  </div>

  <% if @budgets.any? %>
    <div class="bg-white rounded-lg shadow">
      <div class="divide-y">
        <% @budgets.each do |budget| %>
          <div class="p-6">
            <div class="flex justify-between items-start mb-2">
              <div>
                <h3 class="font-semibold text-gray-900"><%= budget.category.name.capitalize %></h3>
                <p class="text-sm text-gray-500">
                  <%= number_to_currency(budget.spent) %> of <%= number_to_currency(budget.amount) %> spent
                </p>
              </div>
              <div class="flex space-x-2 text-sm">
                <%= link_to "Edit", edit_budget_path(budget), class: "text-blue-600 hover:underline" %>
                <%= button_to "Delete", budget, method: :delete, class: "text-red-600 hover:underline", data: { turbo_confirm: "Are you sure?" } %>
              </div>
            </div>
            <div class="w-full bg-gray-200 rounded-full h-3">
              <% percentage = [budget.percentage_used, 100].min %>
              <% bar_color = percentage >= 100 ? 'bg-red-600' : percentage >= 80 ? 'bg-yellow-500' : 'bg-green-500' %>
              <div class="<%= bar_color %> h-3 rounded-full transition-all" style="width: <%= percentage %>%"></div>
            </div>
            <div class="flex justify-between mt-1 text-sm">
              <span class="<%= budget.remaining >= 0 ? 'text-green-600' : 'text-red-600' %>">
                <%= budget.remaining >= 0 ? "#{number_to_currency(budget.remaining)} remaining" : "#{number_to_currency(budget.remaining.abs)} over budget" %>
              </span>
              <span class="text-gray-500"><%= budget.percentage_used %>%</span>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% else %>
    <div class="bg-white rounded-lg shadow p-8 text-center">
      <p class="text-gray-500 mb-4">No budgets set for <%= Date::MONTHNAMES[@month] %> <%= @year %>.</p>
      <%= link_to "Create your first budget", new_budget_path, class: "text-blue-600 hover:underline" %>
    </div>
  <% end %>
</div>
