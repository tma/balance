<% content_for :title, "Budgets" %>

<% content_for :breadcrumbs do %>
  <%= ui_breadcrumbs do %>
    <%= ui_breadcrumb_first "Records" %>
  <% end %>
<% end %>

<div class="w-full">
  <div class="flex justify-between items-center h-10 mb-6">
    <h1 class="<%= ui_title_class %>">Budgets</h1>
    <%= link_to "New", new_budget_path, class: ui_btn_primary_class %>
  </div>

  <!-- Month/Year Navigation -->
  <div class="<%= ui_card_class %> mb-4 px-4 py-2">
    <div class="flex items-center justify-between">
      <%
        prev_month = @current_date.prev_month
        next_month = @current_date.next_month
      %>
      <%= link_to budgets_path(year: prev_month.year, month: prev_month.month), class: "p-1 hover:bg-slate-50 dark:hover:bg-slate-700 transition #{ui_text_muted_class} text-sm" do %>
        &larr; <%= prev_month.strftime("%b") %>
      <% end %>
      <span class="font-semibold <%= ui_text_class %>"><%= Date::MONTHNAMES[@month] %> <%= @year %></span>
      <%= link_to budgets_path(year: next_month.year, month: next_month.month), class: "p-1 hover:bg-slate-50 dark:hover:bg-slate-700 transition #{ui_text_muted_class} text-sm" do %>
        <%= next_month.strftime("%b") %> &rarr;
      <% end %>
    </div>
  </div>

  <!-- Monthly Budgets Section -->
  <div class="<%= ui_card_table_class %> mb-4">
    <% if @monthly_budgets.any? %>
      <table class="min-w-full">
        <thead class="<%= ui_table_header_class %>">
          <tr>
            <th class="<%= ui_table_th_class %> whitespace-nowrap">Monthly</th>
            <th class="<%= ui_table_th_class %> text-right pr-2">Spent</th>
            <th class="<%= ui_table_th_class %> text-right pl-0">Budget</th>
            <th class="<%= ui_table_th_class %>" style="min-width: 200px;"></th>
            <th class="<%= ui_table_th_class %>"></th>
          </tr>
        </thead>
        <tbody class="<%= ui_card_body_class %> border-t-[6px] border-slate-100 dark:border-slate-900">
          <% @monthly_budgets.each do |budget| %>
            <% percentage = budget.percentage_used(@year, @month) %>
            <% remaining = budget.remaining(@year, @month) %>
            <% is_over_budget = percentage > 100 %>
            <% bar_pct = [percentage, 100].min %>
            <tr class="<%= ui_table_row_class %>">
              <td class="<%= ui_table_td_class %> <%= ui_text_class %> font-medium w-40">
                <%= link_to budget.category.name, budget_path(budget), class: "hover:text-cyan-600 dark:hover:text-cyan-400 transition" %>
              </td>
              <td class="<%= ui_table_td_class %> text-right tabular-nums pr-2 <%= is_over_budget ? ui_negative_class + ' font-medium' : ui_text_muted_class %>">
                <%= format_currency(budget.spent(@year, @month)) %>
              </td>
              <td class="<%= ui_table_td_class %> text-right <%= ui_text_muted_class %> tabular-nums pl-0">
                <%= format_currency(budget.amount) %>
              </td>
              <td class="<%= ui_table_td_class %>" style="min-width: 200px;">
                <% if percentage > 0 %>
                  <div style="height: 20px; display: flex;" class="text-xs overflow-hidden">
                    <div style="width: <%= bar_pct %>%; background: <%= is_over_budget ? '#e11d48' : '#94a3b8' %>;" class="h-full flex items-center justify-start pl-1">
                      <% if bar_pct > 25 %><span class="text-white"><%= percentage %>%</span><% end %>
                    </div>
                    <% if percentage <= 100 %>
                      <div style="width: <%= 100 - bar_pct %>%; background: rgba(148, 163, 184, 0.15);" class="h-full"></div>
                    <% end %>
                  </div>
                <% else %>
                  <span class="<%= ui_text_subtle_class %>">-</span>
                <% end %>
              </td>
              <td class="<%= ui_table_td_class %> whitespace-nowrap text-right w-24">
                <div class="flex items-center justify-end gap-2">
                  <%= link_to "Edit", edit_budget_path(budget), class: ui_link_class %>
                  <%= button_to "Delete", budget, method: :delete, class: "text-rose-500 dark:text-rose-400 hover:text-rose-600 dark:hover:text-rose-300", form: { data: { turbo_confirm: "Are you sure?" }, class: "inline" } %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <div class="px-4 py-1.5 <%= ui_table_header_class %> text-xs font-medium <%= ui_text_muted_class %>">Monthly Budgets</div>
      <div class="<%= ui_empty_class %>">
        <p class="<%= ui_text_muted_class %> mb-2">No monthly budgets set.</p>
        <%= link_to "Create one", new_budget_path(period: "monthly"), class: "#{ui_link_class} text-sm" %>
      </div>
    <% end %>
  </div>

  <!-- Yearly Budgets Section -->
  <div class="<%= ui_card_table_class %>">
    <% if @yearly_budgets.any? %>
      <table class="min-w-full">
        <thead class="<%= ui_table_header_class %>">
          <tr>
            <th class="<%= ui_table_th_class %> whitespace-nowrap">Yearly (<%= @year %>)</th>
            <th class="<%= ui_table_th_class %> text-right pr-2">Spent</th>
            <th class="<%= ui_table_th_class %> text-right pl-0">Budget</th>
            <th class="<%= ui_table_th_class %>" style="min-width: 200px;"></th>
            <th class="<%= ui_table_th_class %>"></th>
          </tr>
        </thead>
        <tbody class="<%= ui_card_body_class %> border-t-[6px] border-slate-100 dark:border-slate-900">
          <% @yearly_budgets.each do |budget| %>
            <% percentage = budget.percentage_used(@year, nil) %>
            <% remaining = budget.remaining(@year, nil) %>
            <% is_over_budget = percentage > 100 %>
            <% bar_pct = [percentage, 100].min %>
            <tr class="<%= ui_table_row_class %>">
              <td class="<%= ui_table_td_class %> <%= ui_text_class %> font-medium w-40">
                <%= link_to budget.category.name, budget_path(budget), class: "hover:text-cyan-600 dark:hover:text-cyan-400 transition" %>
              </td>
              <td class="<%= ui_table_td_class %> text-right tabular-nums pr-2 <%= is_over_budget ? ui_negative_class + ' font-medium' : ui_text_muted_class %>">
                <%= format_currency(budget.spent(@year, nil)) %>
              </td>
              <td class="<%= ui_table_td_class %> text-right <%= ui_text_muted_class %> tabular-nums pl-0">
                <%= format_currency(budget.amount) %>
              </td>
              <td class="<%= ui_table_td_class %>" style="min-width: 200px;">
                <% if percentage > 0 %>
                  <div style="height: 20px; display: flex;" class="text-xs overflow-hidden">
                    <div style="width: <%= bar_pct %>%; background: <%= is_over_budget ? '#e11d48' : '#94a3b8' %>;" class="h-full flex items-center justify-start pl-1">
                      <% if bar_pct > 25 %><span class="text-white"><%= percentage %>%</span><% end %>
                    </div>
                    <% if percentage <= 100 %>
                      <div style="width: <%= 100 - bar_pct %>%; background: rgba(148, 163, 184, 0.15);" class="h-full"></div>
                    <% end %>
                  </div>
                <% else %>
                  <span class="<%= ui_text_subtle_class %>">-</span>
                <% end %>
              </td>
              <td class="<%= ui_table_td_class %> whitespace-nowrap text-right w-24">
                <div class="flex items-center justify-end gap-2">
                  <%= link_to "Edit", edit_budget_path(budget), class: ui_link_class %>
                  <%= button_to "Delete", budget, method: :delete, class: "text-rose-500 dark:text-rose-400 hover:text-rose-600 dark:hover:text-rose-300", form: { data: { turbo_confirm: "Are you sure?" }, class: "inline" } %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <div class="px-4 py-1.5 <%= ui_table_header_class %> text-xs font-medium <%= ui_text_muted_class %>">Yearly Budgets (<%= @year %>)</div>
      <div class="<%= ui_empty_class %>">
        <p class="<%= ui_text_muted_class %> mb-2">No yearly budgets set.</p>
        <%= link_to "Create one", new_budget_path(period: "yearly"), class: "#{ui_link_class} text-sm" %>
      </div>
    <% end %>
  </div>
</div>
