<% content_for :title, "Budgets" %>

<div class="w-full">
  <div class="flex justify-between items-center mb-6">
    <h1 class="<%= ui_title_class %>">Budgets</h1>
    <%= link_to "New Budget", new_budget_path, class: ui_btn_primary_class %>
  </div>

  <!-- Month/Year Navigation -->
  <div class="<%= ui_card_class %> mb-4 px-4 py-2">
    <div class="flex items-center justify-between">
      <%
        prev_month = @current_date.prev_month
        next_month = @current_date.next_month
      %>
      <%= link_to budgets_path(year: prev_month.year, month: prev_month.month), class: "p-1 hover:bg-slate-50 dark:hover:bg-slate-700 rounded-lg transition #{ui_text_muted_class} text-sm" do %>
        &larr; <%= prev_month.strftime("%b") %>
      <% end %>
      <span class="font-semibold <%= ui_text_class %>"><%= Date::MONTHNAMES[@month] %> <%= @year %></span>
      <%= link_to budgets_path(year: next_month.year, month: next_month.month), class: "p-1 hover:bg-slate-50 dark:hover:bg-slate-700 rounded-lg transition #{ui_text_muted_class} text-sm" do %>
        <%= next_month.strftime("%b") %> &rarr;
      <% end %>
    </div>
  </div>

  <!-- Monthly Budgets Section -->
  <div class="<%= ui_card_table_class %> mb-4">
    <% if @monthly_budgets.any? %>
      <table class="min-w-full">
        <thead class="<%= ui_table_header_class %>">
          <tr>
            <th colspan="5" class="<%= ui_table_th_class %>">
              Monthly Budgets
              <span class="<%= ui_text_subtle_class %> ml-2"><%= @monthly_budgets.size %> budget<%= @monthly_budgets.size == 1 ? '' : 's' %></span>
            </th>
          </tr>
        </thead>
        <tbody class="<%= ui_card_body_class %>">
          <% @monthly_budgets.each do |budget| %>
            <% percentage = budget.percentage_used(@year, @month) %>
            <% remaining = budget.remaining(@year, @month) %>
            <tr class="<%= ui_table_row_class %>">
              <td class="<%= ui_table_td_class %> <%= ui_text_class %> font-medium w-40">
                <%= budget.category.name %>
              </td>
              <td class="px-4 py-2 w-full">
                <div class="w-full bg-slate-100 dark:bg-slate-700 rounded-full h-2">
                  <% bar_pct = [percentage, 100].min %>
                  <% bar_color = percentage >= 100 ? 'bg-rose-400' : percentage >= 80 ? 'bg-amber-400' : 'bg-emerald-400' %>
                  <div class="<%= bar_color %> h-2 rounded-full transition-all" style="width: <%= bar_pct %>%"></div>
                </div>
              </td>
              <td class="<%= ui_table_td_class %> whitespace-nowrap text-right <%= ui_text_muted_class %>">
                <%= format_currency(budget.spent(@year, @month)) %> / <%= format_currency(budget.amount) %>
              </td>
              <td class="<%= ui_table_td_class %> whitespace-nowrap text-right <%= remaining >= 0 ? ui_positive_class : ui_negative_class %>">
                <% if remaining >= 0 %>
                  <%= format_currency(remaining) %>
                <% else %>
                  -<%= format_currency(remaining.abs) %>
                <% end %>
              </td>
              <td class="<%= ui_table_td_class %> whitespace-nowrap text-right w-24">
                <div class="flex items-center justify-end gap-2">
                  <%= link_to "Edit", edit_budget_path(budget), class: ui_link_class %>
                  <%= button_to "Delete", budget, method: :delete, class: "text-rose-500 dark:text-rose-400 hover:text-rose-600 dark:hover:text-rose-300", form: { data: { turbo_confirm: "Are you sure?" }, class: "inline" } %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <div class="px-4 py-1.5 <%= ui_table_header_class %> text-xs font-medium <%= ui_text_muted_class %>">Monthly Budgets</div>
      <div class="<%= ui_empty_class %>">
        <p class="<%= ui_text_muted_class %> mb-2">No monthly budgets set.</p>
        <%= link_to "Create one", new_budget_path(period: "monthly"), class: "#{ui_link_class} text-sm" %>
      </div>
    <% end %>
  </div>

  <!-- Yearly Budgets Section -->
  <div class="<%= ui_card_table_class %>">
    <% if @yearly_budgets.any? %>
      <table class="min-w-full">
        <thead class="<%= ui_table_header_class %>">
          <tr>
            <th colspan="5" class="<%= ui_table_th_class %>">
              Yearly Budgets (<%= @year %>)
              <span class="<%= ui_text_subtle_class %> ml-2"><%= @yearly_budgets.size %> budget<%= @yearly_budgets.size == 1 ? '' : 's' %></span>
            </th>
          </tr>
        </thead>
        <tbody class="<%= ui_card_body_class %>">
          <% @yearly_budgets.each do |budget| %>
            <% percentage = budget.percentage_used(@year, nil) %>
            <% remaining = budget.remaining(@year, nil) %>
            <tr class="<%= ui_table_row_class %>">
              <td class="<%= ui_table_td_class %> <%= ui_text_class %> font-medium w-40">
                <%= budget.category.name %>
              </td>
              <td class="px-4 py-2 w-full">
                <div class="w-full bg-slate-100 dark:bg-slate-700 rounded-full h-2">
                  <% bar_pct = [percentage, 100].min %>
                  <% bar_color = percentage >= 100 ? 'bg-rose-400' : percentage >= 80 ? 'bg-amber-400' : 'bg-emerald-400' %>
                  <div class="<%= bar_color %> h-2 rounded-full transition-all" style="width: <%= bar_pct %>%"></div>
                </div>
              </td>
              <td class="<%= ui_table_td_class %> whitespace-nowrap text-right <%= ui_text_muted_class %>">
                <%= format_currency(budget.spent(@year, nil)) %> / <%= format_currency(budget.amount) %>
              </td>
              <td class="<%= ui_table_td_class %> whitespace-nowrap text-right <%= remaining >= 0 ? ui_positive_class : ui_negative_class %>">
                <% if remaining >= 0 %>
                  <%= format_currency(remaining) %>
                <% else %>
                  -<%= format_currency(remaining.abs) %>
                <% end %>
              </td>
              <td class="<%= ui_table_td_class %> whitespace-nowrap text-right w-24">
                <div class="flex items-center justify-end gap-2">
                  <%= link_to "Edit", edit_budget_path(budget), class: ui_link_class %>
                  <%= button_to "Delete", budget, method: :delete, class: "text-rose-500 dark:text-rose-400 hover:text-rose-600 dark:hover:text-rose-300", form: { data: { turbo_confirm: "Are you sure?" }, class: "inline" } %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <div class="px-4 py-1.5 <%= ui_table_header_class %> text-xs font-medium <%= ui_text_muted_class %>">Yearly Budgets (<%= @year %>)</div>
      <div class="<%= ui_empty_class %>">
        <p class="<%= ui_text_muted_class %> mb-2">No yearly budgets set.</p>
        <%= link_to "Create one", new_budget_path(period: "yearly"), class: "#{ui_link_class} text-sm" %>
      </div>
    <% end %>
  </div>
</div>
