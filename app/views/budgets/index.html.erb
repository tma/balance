<% content_for :title, "Budgets" %>

<div class="w-full">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold text-slate-800">Budgets</h1>
    <%= link_to "New Budget", new_budget_path, class: "rounded-lg px-4 py-2 bg-cyan-500 hover:bg-cyan-600 text-white font-medium transition" %>
  </div>

  <!-- Month/Year Navigation -->
  <div class="bg-white rounded-xl border border-slate-200 mb-4 px-4 py-2">
    <div class="flex items-center justify-between">
      <%
        prev_month = @current_date.prev_month
        next_month = @current_date.next_month
      %>
      <%= link_to budgets_path(year: prev_month.year, month: prev_month.month), class: "p-1 hover:bg-slate-50 rounded-lg transition text-slate-500 text-sm" do %>
        &larr; <%= prev_month.strftime("%b") %>
      <% end %>
      <span class="font-semibold text-slate-700"><%= Date::MONTHNAMES[@month] %> <%= @year %></span>
      <%= link_to budgets_path(year: next_month.year, month: next_month.month), class: "p-1 hover:bg-slate-50 rounded-lg transition text-slate-500 text-sm" do %>
        <%= next_month.strftime("%b") %> &rarr;
      <% end %>
    </div>
  </div>

  <!-- Monthly Budgets Section -->
  <div class="bg-white rounded-xl border border-slate-200 overflow-hidden mb-4">
    <% if @monthly_budgets.any? %>
      <table class="min-w-full">
        <thead class="bg-slate-50 border-b border-slate-200">
          <tr>
            <th colspan="5" class="px-4 py-1.5 text-left text-xs font-medium text-slate-500">
              Monthly Budgets
              <span class="text-slate-400 ml-2"><%= @monthly_budgets.size %> budget<%= @monthly_budgets.size == 1 ? '' : 's' %></span>
            </th>
          </tr>
        </thead>
        <tbody class="bg-white">
          <% @monthly_budgets.each do |budget| %>
            <% percentage = budget.percentage_used(@year, @month) %>
            <% remaining = budget.remaining(@year, @month) %>
            <tr class="hover:bg-slate-50 transition border-b border-slate-100 last:border-b-0">
              <td class="px-4 py-2 text-sm text-slate-700 font-medium w-40">
                <%= budget.category.name %>
              </td>
              <td class="px-4 py-2 w-full">
                <div class="w-full bg-slate-100 rounded-full h-2">
                  <% bar_pct = [percentage, 100].min %>
                  <% bar_color = percentage >= 100 ? 'bg-rose-400' : percentage >= 80 ? 'bg-amber-400' : 'bg-emerald-400' %>
                  <div class="<%= bar_color %> h-2 rounded-full transition-all" style="width: <%= bar_pct %>%"></div>
                </div>
              </td>
              <td class="px-4 py-2 whitespace-nowrap text-sm text-right text-slate-500">
                <%= format_currency(budget.spent(@year, @month)) %> / <%= format_currency(budget.amount) %>
              </td>
              <td class="px-4 py-2 whitespace-nowrap text-sm text-right <%= remaining >= 0 ? 'text-emerald-500' : 'text-rose-400' %>">
                <%= remaining >= 0 ? format_currency(remaining) : "-#{format_currency(remaining.abs)}" %>
              </td>
              <td class="px-4 py-2 whitespace-nowrap text-right text-sm space-x-2 w-24">
                <%= link_to "Edit", edit_budget_path(budget), class: "text-cyan-600 hover:text-cyan-700" %>
                <%= button_to "Delete", budget, method: :delete, class: "text-rose-500 hover:text-rose-600", form: { data: { turbo_confirm: "Are you sure?" }, class: "inline" } %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <div class="px-4 py-1.5 bg-slate-50 border-b border-slate-200 text-xs font-medium text-slate-500">Monthly Budgets</div>
      <div class="p-8 text-center">
        <p class="text-slate-500 mb-2">No monthly budgets set.</p>
        <%= link_to "Create one", new_budget_path(period: "monthly"), class: "text-cyan-600 hover:underline text-sm" %>
      </div>
    <% end %>
  </div>

  <!-- Yearly Budgets Section -->
  <div class="bg-white rounded-xl border border-slate-200 overflow-hidden">
    <% if @yearly_budgets.any? %>
      <table class="min-w-full">
        <thead class="bg-slate-50 border-b border-slate-200">
          <tr>
            <th colspan="5" class="px-4 py-1.5 text-left text-xs font-medium text-slate-500">
              Yearly Budgets (<%= @year %>)
              <span class="text-slate-400 ml-2"><%= @yearly_budgets.size %> budget<%= @yearly_budgets.size == 1 ? '' : 's' %></span>
            </th>
          </tr>
        </thead>
        <tbody class="bg-white">
          <% @yearly_budgets.each do |budget| %>
            <% percentage = budget.percentage_used(@year, nil) %>
            <% remaining = budget.remaining(@year, nil) %>
            <tr class="hover:bg-slate-50 transition border-b border-slate-100 last:border-b-0">
              <td class="px-4 py-2 text-sm text-slate-700 font-medium w-40">
                <%= budget.category.name %>
              </td>
              <td class="px-4 py-2 w-full">
                <div class="w-full bg-slate-100 rounded-full h-2">
                  <% bar_pct = [percentage, 100].min %>
                  <% bar_color = percentage >= 100 ? 'bg-rose-400' : percentage >= 80 ? 'bg-amber-400' : 'bg-emerald-400' %>
                  <div class="<%= bar_color %> h-2 rounded-full transition-all" style="width: <%= bar_pct %>%"></div>
                </div>
              </td>
              <td class="px-4 py-2 whitespace-nowrap text-sm text-right text-slate-500">
                <%= format_currency(budget.spent(@year, nil)) %> / <%= format_currency(budget.amount) %>
              </td>
              <td class="px-4 py-2 whitespace-nowrap text-sm text-right <%= remaining >= 0 ? 'text-emerald-500' : 'text-rose-400' %>">
                <%= remaining >= 0 ? format_currency(remaining) : "-#{format_currency(remaining.abs)}" %>
              </td>
              <td class="px-4 py-2 whitespace-nowrap text-right text-sm space-x-2 w-24">
                <%= link_to "Edit", edit_budget_path(budget), class: "text-cyan-600 hover:text-cyan-700" %>
                <%= button_to "Delete", budget, method: :delete, class: "text-rose-500 hover:text-rose-600", form: { data: { turbo_confirm: "Are you sure?" }, class: "inline" } %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <div class="px-4 py-1.5 bg-slate-50 border-b border-slate-200 text-xs font-medium text-slate-500">Yearly Budgets (<%= @year %>)</div>
      <div class="p-8 text-center">
        <p class="text-slate-500 mb-2">No yearly budgets set.</p>
        <%= link_to "Create one", new_budget_path(period: "yearly"), class: "text-cyan-600 hover:underline text-sm" %>
      </div>
    <% end %>
  </div>
</div>
