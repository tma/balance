<% content_for :title, "Import" %>

<% content_for :breadcrumbs do %>
  <%= ui_breadcrumbs do %>
    <%= ui_breadcrumb_first "Records" %>
    <%= ui_breadcrumb_item "Transactions", transactions_path %>
  <% end %>
<% end %>

<div class="w-full">
  <div class="flex items-center justify-between mb-6">
    <h1 class="<%= ui_title_class %>">Import</h1>
    <%= link_to "Imports", imports_path, class: ui_btn_secondary_class %>
  </div>

  <!-- Upload Form -->
  <div class="mb-6">
    <%= form_with url: imports_path, method: :post, multipart: true do |form| %>
      <div class="<%= ui_card_class %> p-6">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <%= form.label :account_id, "Target Account", class: ui_label_class %>
            <p class="text-sm <%= ui_text_muted_class %> mb-2">Transactions will be added to this account.</p>
            <%= form.select :account_id,
                grouped_account_options(@accounts),
                { prompt: "Select account" }, 
                class: ui_input_class,
                required: true %>
          </div>

          <div>
            <%= form.label :file, "Statement", class: ui_label_class %>
            <p class="text-sm <%= ui_text_muted_class %> mb-2">CSV file (max 5MB)</p>
            <div class="flex items-center gap-3">
              <%= form.file_field :file, 
                  accept: ".csv,text/csv",
                  class: "block w-full text-sm #{ui_text_muted_class} file:mr-4 file:py-2 file:px-4 file:border-0 file:text-sm file:font-medium file:bg-slate-100 dark:file:bg-slate-700 file:text-slate-700 dark:file:text-slate-300 hover:file:bg-slate-200 dark:hover:file:bg-slate-600 file:cursor-pointer",
                  required: true %>
            </div>
          </div>
        </div>

        <div class="mt-6 flex items-center justify-end">
          <%= form.submit "Process Transactions", class: "#{ui_btn_primary_class} cursor-pointer" %>
        </div>
      </div>
    <% end %>
  </div>

  <!-- How it works -->
  <div class="p-6 bg-amber-50 dark:bg-slate-800 border border-amber-200 dark:border-slate-700 border-l-4 border-l-amber-300 dark:border-l-amber-400">
    <h2 class="font-semibold text-amber-800 dark:text-slate-200 mb-2">How it works</h2>
    <ol class="list-decimal ml-5 text-sm text-amber-700 dark:text-slate-300 space-y-1">
      <li>Upload a bank statement (CSV format)</li>
      <li>AI processes your statement and matches transactions to categories</li>
      <li>Review the processed transactions and make any adjustments</li>
      <li>Select which transactions to import and click Import</li>
    </ol>
    <p class="mt-4 text-sm text-amber-700 dark:text-slate-300">
      <strong class="text-amber-800 dark:text-slate-200">Note:</strong> Duplicate transactions (same date, amount, and description) will be detected and marked.
    </p>
  </div>
</div>
