<% content_for :title, "Import" %>

<div class="w-full">
  <div class="flex items-center justify-between mb-6">
    <h1 class="<%= ui_title_class %>">Import</h1>
    <%= link_to "Imports", imports_path, class: ui_btn_secondary_class %>
  </div>

  <% if @pending_imports.any? %>
    <!-- Pending Imports -->
    <div class="mb-6">
      <h2 class="text-sm font-semibold <%= ui_text_muted_class %> uppercase tracking-wider mb-3">Needs Attention</h2>
      <div class="<%= ui_card_table_class %>">
        <table class="min-w-full">
          <tbody class="<%= ui_card_body_class %>">
            <% @pending_imports.each do |import| %>
              <tr class="<%= ui_table_row_class %>">
                <td class="<%= ui_table_td_class %> <%= ui_text_class %>">
                  <div class="flex items-center">
                    <% if import.pdf? %>
                      <svg class="h-5 w-5 text-rose-500 dark:text-rose-400 mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h4.586A2 2 0 0112 2.586L15.414 6A2 2 0 0116 7.414V16a2 2 0 01-2 2H6a2 2 0 01-2-2V4z" clip-rule="evenodd"/>
                      </svg>
                    <% else %>
                      <svg class="h-5 w-5 text-emerald-500 dark:text-emerald-400 mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h4.586A2 2 0 0112 2.586L15.414 6A2 2 0 0116 7.414V16a2 2 0 01-2 2H6a2 2 0 01-2-2V4z" clip-rule="evenodd"/>
                      </svg>
                    <% end %>
                    <%= truncate(import.original_filename, length: 40) %>
                  </div>
                </td>
                <td class="<%= ui_table_td_class %> whitespace-nowrap <%= ui_text_muted_class %>">
                  <%= import.account.name %>
                </td>
                <td class="<%= ui_table_td_class %>">
                  <% case import.status %>
                  <% when "pending" %>
                    <span class="<%= ui_badge_class %>">Queued</span>
                  <% when "processing" %>
                    <span class="<%= ui_badge_info_class %> inline-flex items-center">
                      <svg class="animate-spin -ml-0.5 mr-1.5 h-3 w-3" fill="none" viewBox="0 0 24 24">
                        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                        <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                      </svg>
                      Processing
                    </span>
                  <% when "completed" %>
                    <span class="<%= ui_badge_warning_class %>">Ready for Review</span>
                  <% when "failed" %>
                    <span class="<%= ui_badge_danger_class %>">Failed</span>
                  <% end %>
                </td>
                <td class="<%= ui_table_td_class %> whitespace-nowrap <%= ui_text_subtle_class %>">
                  <%= time_ago_in_words(import.created_at) %> ago
                </td>
                <td class="<%= ui_table_td_class %> whitespace-nowrap text-right">
                  <div class="flex items-center justify-end gap-2">
                    <% if import.completed? %>
                      <%= link_to "Review", import_path(import), class: "#{ui_btn_primary_class} text-xs px-3 py-1.5" %>
                      <%= button_to "Delete", import_path(import), method: :delete, class: "text-rose-500 dark:text-rose-400 hover:text-rose-600 dark:hover:text-rose-300 text-xs", form: { data: { turbo_confirm: "Delete this import?" }, class: "inline" } %>
                    <% elsif import.failed? %>
                      <%= link_to "View", import_path(import), class: ui_link_class %>
                      <%= button_to "Delete", import_path(import), method: :delete, class: "text-rose-500 dark:text-rose-400 hover:text-rose-600 dark:hover:text-rose-300 text-xs", form: { data: { turbo_confirm: "Delete this import?" }, class: "inline" } %>
                    <% else %>
                      <%= link_to "View", import_path(import), class: ui_link_class %>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  <% end %>

  <!-- Upload Form -->
  <div class="mb-6">
    <h2 class="text-sm font-semibold <%= ui_text_muted_class %> uppercase tracking-wider mb-3">Upload Statement</h2>
    <%= form_with url: imports_path, method: :post, multipart: true do |form| %>
      <div class="<%= ui_card_class %> p-6">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <%= form.label :account_id, "Target Account", class: ui_label_class %>
            <p class="text-sm <%= ui_text_muted_class %> mb-2">Transactions will be added to this account.</p>
            <%= form.collection_select :account_id, @accounts, :id, :name, 
                { prompt: "Select account" }, 
                class: ui_input_class,
                required: true %>
          </div>

          <div>
            <%= form.label :file, "Statement", class: ui_label_class %>
            <p class="text-sm <%= ui_text_muted_class %> mb-2">PDF or CSV file (max 5MB)</p>
            <div class="flex items-center gap-3">
              <%= form.file_field :file, 
                  accept: ".pdf,.csv,application/pdf,text/csv",
                  class: "block w-full text-sm #{ui_text_muted_class} file:mr-4 file:py-2 file:px-4 file:rounded-lg file:border-0 file:text-sm file:font-medium file:bg-slate-100 dark:file:bg-slate-700 file:text-slate-700 dark:file:text-slate-300 hover:file:bg-slate-200 dark:hover:file:bg-slate-600 file:cursor-pointer",
                  required: true %>
            </div>
          </div>
        </div>

        <div class="mt-6 flex items-center justify-end">
          <%= form.submit "Extract Transactions", class: "#{ui_btn_primary_class} cursor-pointer" %>
        </div>
      </div>
    <% end %>
  </div>

  <!-- How it works -->
  <div class="<%= ui_card_class %> bg-slate-50 dark:bg-slate-800/50 p-6">
    <h2 class="font-semibold <%= ui_text_class %> mb-2">How it works</h2>
    <ol class="list-decimal ml-5 text-sm <%= ui_text_muted_class %> space-y-1">
      <li>Upload a statement (PDF or CSV format)</li>
      <li>AI extracts transactions and matches them to categories</li>
      <li>Review the extracted transactions and make any adjustments</li>
      <li>Select which transactions to import and click Import</li>
    </ol>
    <p class="mt-4 text-sm <%= ui_text_muted_class %>">
      <strong class="<%= ui_text_class %>">Note:</strong> Duplicate transactions (same date, amount, and description) will be detected and marked.
    </p>
  </div>
</div>
