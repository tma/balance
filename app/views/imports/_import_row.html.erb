<tr class="hover:bg-slate-50 transition border-b border-slate-100 last:border-b-0">
  <td class="px-4 py-2 text-sm text-slate-700">
    <div class="flex items-center">
      <% if import.pdf? %>
        <svg class="h-5 w-5 text-rose-500 mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h4.586A2 2 0 0112 2.586L15.414 6A2 2 0 0116 7.414V16a2 2 0 01-2 2H6a2 2 0 01-2-2V4z" clip-rule="evenodd"/>
        </svg>
      <% else %>
        <svg class="h-5 w-5 text-emerald-500 mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h4.586A2 2 0 0112 2.586L15.414 6A2 2 0 0116 7.414V16a2 2 0 01-2 2H6a2 2 0 01-2-2V4z" clip-rule="evenodd"/>
        </svg>
      <% end %>
      <%= link_to truncate(import.original_filename, length: 30), import_path(import), class: "hover:text-cyan-600" %>
    </div>
  </td>
  <td class="px-4 py-2 whitespace-nowrap text-sm text-slate-500">
    <%= import.account.name %>
  </td>
  <td class="px-4 py-2 text-sm">
    <% case import.status %>
    <% when "pending" %>
      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-slate-100 text-slate-800">
        Pending
      </span>
    <% when "processing" %>
      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-cyan-100 text-cyan-800">
        <svg class="animate-spin -ml-0.5 mr-1.5 h-3 w-3" fill="none" viewBox="0 0 24 24">
          <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
          <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
        </svg>
        Processing
      </span>
    <% when "completed" %>
      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-emerald-100 text-emerald-800">
        Completed
      </span>
    <% when "failed" %>
      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-rose-100 text-rose-800">
        Failed
      </span>
    <% end %>
  </td>
  <td class="px-4 py-2 whitespace-nowrap text-sm text-slate-500">
    <%= import.transactions_count %>
  </td>
  <td class="px-4 py-2 whitespace-nowrap text-sm text-slate-400">
    <%= time_ago_in_words(import.created_at) %> ago
  </td>
  <td class="px-4 py-2 whitespace-nowrap text-right text-sm space-x-2">
    <%= link_to "View", import_path(import), class: "text-cyan-600 hover:text-cyan-700" %>
    <% if import.completed? || import.failed? %>
      <%= button_to "Delete", import_path(import), method: :delete, class: "text-rose-500 hover:text-rose-600", form: { data: { turbo_confirm: "Delete this import?" }, class: "inline" } %>
    <% end %>
  </td>
</tr>
