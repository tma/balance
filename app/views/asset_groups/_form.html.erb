<%= form_with(model: asset_group, class: "contents") do |form| %>
  <% if asset_group.errors.any? %>
    <div class="<%= ui_alert_error_class %> mb-4">
      <h2 class="font-medium"><%= pluralize(asset_group.errors.count, "error") %> prohibited this asset group from being saved:</h2>
      <ul class="list-disc ml-6 mt-2">
        <% asset_group.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-4">
    <%= form.label :name, class: ui_label_class %>
    <%= form.text_field :name, class: ui_input_class, placeholder: "Real Estate Portfolio" %>
  </div>

  <div class="mb-4">
    <%= form.label :description, class: ui_label_class %>
    <%= form.text_area :description, rows: 3, class: ui_input_class, placeholder: "Optional description" %>
  </div>

  <div class="mb-4">
    <%= form.label :color, class: ui_label_class %>
    <div class="mt-1 flex items-center space-x-3">
      <%= form.color_field :color, class: "h-10 w-14 border border-slate-300 dark:border-slate-600 cursor-pointer", data: { color_target: "picker" } %>
      <div class="flex space-x-1">
        <% %w[#93c5fd #86efac #fca5a5 #c4b5fd #fdba74 #67e8f9 #f0abfc #fde047 #cbd5e1 #5eead4].each do |preset| %>
          <button type="button" 
                  class="w-6 h-6 border border-slate-200 dark:border-slate-600 hover:scale-110 transition"
                  style="background-color: <%= preset %>;"
                  onclick="document.querySelector('[name=\'asset_group[color]\']').value = '<%= preset %>';"
                  title="<%= preset %>"></button>
        <% end %>
      </div>
    </div>
  </div>

  <div class="flex space-x-4">
    <%= form.submit class: ui_btn_primary_class + " cursor-pointer" %>
    <%= link_to "Cancel", assets_path, class: ui_btn_secondary_class %>
  </div>
<% end %>
