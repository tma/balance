<% content_for :title, "Asset Groups" %>

<div class="w-full">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold text-gray-900">Asset Groups</h1>
    <%= link_to "New Group", new_asset_group_path, class: "rounded-md px-4 py-2 bg-blue-600 hover:bg-blue-500 text-white font-medium" %>
  </div>

  <% if @asset_groups.any? %>
    <div class="space-y-4">
      <% @asset_groups.each do |group| %>
        <div class="bg-white rounded-lg shadow overflow-hidden">
          <div class="p-6">
            <div class="flex justify-between items-start mb-4">
              <div>
                <h2 class="text-xl font-semibold text-gray-900"><%= group.name %></h2>
                <% if group.description.present? %>
                  <p class="text-sm text-gray-500 mt-1"><%= group.description %></p>
                <% end %>
              </div>
              <div class="flex space-x-2 text-sm">
                <%= link_to "View", group, class: "text-blue-600 hover:underline" %>
                <%= link_to "Edit", edit_asset_group_path(group), class: "text-blue-600 hover:underline" %>
                <%= button_to "Delete", group, method: :delete, class: "text-red-600 hover:underline", data: { turbo_confirm: "Are you sure? Assets in this group will be ungrouped." } %>
              </div>
            </div>

            <% net_values = group.net_value_by_currency %>
            <% if net_values.any? %>
              <div class="flex flex-wrap gap-4">
                <% net_values.each do |currency, value| %>
                  <div class="flex items-baseline space-x-2">
                    <span class="text-2xl font-bold <%= value >= 0 ? 'text-green-600' : 'text-red-600' %>">
                      <%= number_to_currency(value.abs, unit: "") %>
                    </span>
                    <span class="text-xs font-medium px-2 py-1 rounded <%= value >= 0 ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
                      <%= currency %>
                    </span>
                  </div>
                <% end %>
              </div>
            <% else %>
              <p class="text-gray-500 text-sm">No assets in this group</p>
            <% end %>

            <p class="text-sm text-gray-500 mt-2"><%= pluralize(group.assets.count, "item") %></p>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="bg-white rounded-lg shadow p-6 text-center">
      <p class="text-gray-500 mb-4">No asset groups yet.</p>
      <%= link_to "Create your first group", new_asset_group_path, class: "text-blue-600 hover:underline" %>
    </div>
  <% end %>
</div>
