<% content_for :title, "Transaction" %>

<div class="max-w-md">
  <h1 class="<%= ui_title_class %> mb-6">Transaction Details</h1>

  <div class="<%= ui_card_class %> p-6 mb-6">
    <div class="flex items-center justify-between mb-4">
      <span class="text-4xl"><%= @transaction.transaction_type == 'income' ? 'ðŸ’°' : 'ðŸ’¸' %></span>
      <span class="text-3xl font-bold <%= @transaction.transaction_type == 'income' ? ui_positive_class : ui_negative_class %>">
        <%= @transaction.transaction_type == 'income' ? '+' : '-' %><%= format_currency(@transaction.amount) %>
      </span>
    </div>
    
    <div class="space-y-2 text-sm">
      <p class="<%= ui_text_class %>"><strong>Description:</strong> <%= @transaction.description.presence || "â€”" %></p>
      <p class="<%= ui_text_class %>"><strong>Category:</strong> <%= @transaction.category.name %></p>
      <p class="<%= ui_text_class %>"><strong>Account:</strong> <%= @transaction.account.name %></p>
      <p class="<%= ui_text_class %>"><strong>Date:</strong> <%= @transaction.date.strftime("%B %d, %Y") %></p>
      <p class="<%= ui_text_class %>"><strong>Type:</strong> 
        <span class="<%= @transaction.transaction_type == 'income' ? ui_badge_success_class : ui_badge_danger_class %>">
          <%= @transaction.transaction_type.capitalize %>
        </span>
      </p>
    </div>
  </div>

  <div class="flex space-x-4">
    <%= link_to "Edit", edit_transaction_path(@transaction), class: ui_btn_primary_class %>
    <%= link_to "Back", transactions_path, class: ui_btn_secondary_class %>
    <%= button_to "Delete", @transaction, method: :delete, class: "#{ui_btn_danger_class} cursor-pointer", data: { turbo_confirm: "Are you sure?" } %>
  </div>
</div>
