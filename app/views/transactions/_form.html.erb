<%= form_with(model: transaction, class: "contents") do |form| %>
  <% if transaction.errors.any? %>
    <div class="<%= ui_alert_error_class %> mb-4">
      <h2 class="font-medium"><%= pluralize(transaction.errors.count, "error") %> prohibited this transaction from being saved:</h2>
      <ul class="list-disc ml-6 mt-2">
        <% transaction.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-4">
    <%= form.label :transaction_type, "Type", class: ui_label_class %>
    <%= form.select :transaction_type, [["Income", "income"], ["Expense", "expense"]], {}, class: ui_input_class %>
  </div>

  <div class="mb-4">
    <%= form.label :account_id, "Account", class: ui_label_class %>
    <%= form.collection_select :account_id, Account.includes(:account_type).order(:name), :id, :name, { prompt: "Select account" }, class: ui_input_class %>
  </div>

  <div class="mb-4">
    <%= form.label :category_id, "Category", class: ui_label_class %>
    <%= form.grouped_collection_select :category_id, 
        [["Income", Category.income.order(:name)], ["Expense", Category.expense.order(:name)]],
        :last, :first, :id, :name, 
        { prompt: "Select category" }, 
        class: ui_input_class %>
  </div>

  <div class="mb-4">
    <%= form.label :amount, class: ui_label_class %>
    <%= form.number_field :amount, step: 0.01, min: 0.01, class: ui_input_class, placeholder: "0.00" %>
  </div>

  <div class="mb-4">
    <%= form.label :date, class: ui_label_class %>
    <%= form.date_field :date, class: ui_input_class %>
  </div>

  <div class="mb-4">
    <%= form.label :description, class: ui_label_class %>
    <%= form.text_field :description, class: ui_input_class, placeholder: "Optional description" %>
  </div>

  <div class="flex space-x-4">
    <%= form.submit class: "#{ui_btn_primary_class} cursor-pointer" %>
    <%= link_to "Cancel", transactions_path, class: ui_btn_secondary_class %>
  </div>
<% end %>
