{
  "name": "Balance Rails App",
  "dockerComposeFile": "docker-compose.yml",
  "service": "app",
  "workspaceFolder": "/workspaces/balance",
  "forwardPorts": [3000, 11434],
  "postCreateCommand": "bundle config set --local jobs 1 && bundle install && bin/setup",
  "postStartCommand": "git config --global --add safe.directory /workspaces/balance",
  "customizations": {
    "vscode": {
      "extensions": [
        "Shopify.ruby-lsp",
        "bradlc.vscode-tailwindcss"
      ]
    }
  }
}
